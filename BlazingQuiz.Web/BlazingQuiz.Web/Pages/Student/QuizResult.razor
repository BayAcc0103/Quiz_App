@page "/student/quiz-result/{studentQuizId:int}"
@using BlazingQuiz.Shared
@using BlazingQuiz.Shared.DTOs
@using BlazingQuiz.Shared.Components.Components
@using BlazingQuiz.Web.Apis
@using BlazingQuiz.Web.Auth
@inject IAppState AppState
@inject IStudentQuizApi StudentQuizApi
@inject QuizAuthStateProvider QuizAuthStateProvider
@inject NavigationManager NavigationManager

<BackButton />

@if (_quizResult == null)
{
    <Loader />
}
else
{
    <!-- Slider Container -->
    <div class="slider-container">
        <div class="slider-track" style="transform: translateX(@(CurrentCardIndex * -100)%);">
            <!-- Card 1: Quiz Information -->
            <div class="slider-card">
                <div class="card-header-3d">
                    <h4 class="m-0">Quiz Result</h4>
                </div>

                <div class="card-body">
                    <div class="row">
                        <!-- Left side: Quiz Title and Description -->
                        <div class="col-md-6 border-end">
                            <div class="mb-3">
                                <h5>@_quizResult.QuizName</h5>
                            </div>
                            <div class="mb-3">
                                <p><strong>Total Questions:</strong> @_quizResult.TotalQuestions</p>
                                <p class="text-success"><strong>Correct Answers:</strong> @_quizResult.CorrectAnswers</p>
                                <p class="text-danger"><strong>Incorrect Answers:</strong> @_quizResult.IncorrectAnswers</p>
                            </div>
                        </div>

                        <!-- Right side: Quiz Statistics and Navigation -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6>Performance Summary</h6>
                                <div class="progress mb-2" style="height: 30px;">
                                    <div class="progress-bar bg-success" role="progressbar"
                                         style="width: @(_quizResult.CorrectAnswers * 100.0 / _quizResult.TotalQuestions)%;"
                                         aria-valuenow="@(_quizResult.CorrectAnswers * 100.0 / _quizResult.TotalQuestions)"
                                         aria-valuemin="0" aria-valuemax="100">
                                        @Math.Round(_quizResult.CorrectAnswers * 100.0 / _quizResult.TotalQuestions, 1)%
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <h6>Question Breakdown</h6>
                                @for (int i = 0; i < _quizResult.Questions.Count; i++)
                                {
                                    var question = _quizResult.Questions[i];
                                    var questionNumber = i + 1;
                                    var isCorrect = question.IsTextAnswer ? question.IsTextAnswerCorrect : question.SelectedOptionId == question.CorrectOptionId;
                                    var badgeClass = isCorrect ? "bg-success" : "bg-danger";

                                    <span class="badge @badgeClass me-1 mb-1" style="cursor: pointer;" @onclick="() => GoToCard(i + 1)">
                                        Q@(questionNumber) @(isCorrect ? "✓" : "✗")
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Navigation buttons -->
                @if (_quizResult.Questions.Count > 0)
                {
                    <button type="button" class="btn btn-3d btn-3d-primary next-btn" @onclick="() => GoToCard(1)">View Answers</button>
                }
            </div>

            <!-- Cards for Questions -->
            @for (int i = 0; i < _quizResult.Questions.Count; i++)
            {
                var question = _quizResult.Questions[i];
                var questionIndex = i;

                <div class="slider-card">
                    <div class="card-header-3d d-flex justify-content-between align-items-center">
                        <h4 class="m-0">Question @(i + 1)</h4>
                        @{
                            var isQuestionCorrect = question.IsTextAnswer ? question.IsTextAnswerCorrect : question.SelectedOptionId == question.CorrectOptionId;
                            var statusClass = isQuestionCorrect ? "bg-success" : "bg-danger";
                            var statusText = isQuestionCorrect ? "Correct" : "Incorrect";
                        }
                        <span class="badge @statusClass">@statusText</span>
                    </div>

                    <div class="question-card-content">
                        <div class="row">
                            <!-- Left side: Question Text -->
                            <div class="col-md-6 border-end">
                                <div class="mb-3">
                                    <label class="form-label"><strong>Question:</strong></label>
                                    <div class="question-text">@question.Text</div>
                                </div>
                            </div>

                            <!-- Right side: Your Answer and Correct Answer -->
                            <div class="col-md-6">
                                @if (!question.IsTextAnswer)
                                {
                                    <!-- Multiple Choice Question -->
                                    <div class="mb-3">
                                        <label class="form-label"><strong>Your Answer:</strong></label>
                                        @if (question.SelectedOptionId > 0)
                                        {
                                            var selectedOption = question.Options.FirstOrDefault(o => o.Id == question.SelectedOptionId);
                                            if (selectedOption != null)
                                            {
                                                var isSelectedCorrect = selectedOption.Id == question.CorrectOptionId;
                                                var optionClass = isSelectedCorrect ? "bg-success text-white" : "bg-danger text-white";
                                                <div class="p-2 mb-2 @optionClass">
                                                    @selectedOption.Text
                                                    <span class="float-end">@(isSelectedCorrect ? "Correct!" : "Incorrect")</span>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="p-2 mb-2 bg-warning text-dark">
                                                No answer provided
                                            </div>
                                        }
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label"><strong>Correct Answer:</strong></label>
                                        @{
                                            var correctOption = question.Options.FirstOrDefault(o => o.Id == question.CorrectOptionId);
                                            if (correctOption != null)
                                            {
                                                <div class="p-2 mb-2 bg-info text-white">
                                                    @correctOption.Text
                                                    <span class="float-end">Correct Answer</span>
                                                </div>
                                            }
                                        }
                                    </div>
                                }
                                else
                                {
                                    <!-- Text Input Question -->
                                    <div class="mb-3">
                                        <label class="form-label"><strong>Your Answer:</strong></label>
                                        @if (!string.IsNullOrWhiteSpace(question.SelectedTextAnswer))
                                        {
                                            var isTextCorrect = question.IsTextAnswerCorrect;
                                            var textClass = isTextCorrect ? "bg-success text-white" : "bg-danger text-white";
                                            <div class="p-2 mb-2 @textClass">
                                                @question.SelectedTextAnswer
                                                <span class="float-end">@(isTextCorrect ? "Correct!" : "Incorrect")</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="p-2 mb-2 bg-warning text-dark">
                                                No answer provided
                                            </div>
                                        }
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label"><strong>Correct Answer(s):</strong></label>
                                        @if (question.TextAnswers != null && question.TextAnswers.Any())
                                        {
                                            @foreach (var correctAnswer in question.TextAnswers)
                                            {
                                                <div class="p-2 mb-2 bg-info text-white">
                                                    @correctAnswer.Text
                                                    <span class="float-end">Correct Answer</span>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="p-2 mb-2 bg-secondary text-white">
                                                No correct answers defined
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Navigation buttons for the whole slider -->
        @if (CurrentCardIndex > 0)
        {
            <button type="button" class="nav-btn prev-btn" @onclick="GoToPrevCard">❮</button>
        }

        @if (CurrentCardIndex < TotalCards - 1)
        {
            <button type="button" class="nav-btn next-btn" @onclick="GoToNextCard">❯</button>
        }
    </div>

    <!-- Navigation buttons at the bottom -->
    <div class="row mt-4">
        <div class="col-sm-12 text-center">
            <button class="btn btn-primary btn-lg me-3" @onclick="GoToRecommendations">
                <i class="bi bi-lightbulb"></i> View Recommended Quizzes
            </button>
            <button class="btn btn-outline-secondary btn-lg" @onclick="GoToMyQuizzes">
                <i class="bi bi-arrow-left"></i> Back to My Quizzes
            </button>
        </div>
    </div>
}

@code {
    [Parameter]
    public int StudentQuizId { get; set; }

    private QuizResultDto? _quizResult;
    private int CurrentCardIndex { get; set; } = 0;

    private int TotalCards => 1 + (_quizResult?.Questions.Count ?? 0); // 1 for quiz info + number of questions

    protected override async Task OnInitializedAsync()
    {
        AppState.ShowLoader("Loading quiz result...");
        try
        {
            var result = await StudentQuizApi.GetQuizResultAsync(StudentQuizId);
            if (result.IsSuccess && result.Data != null)
            {
                _quizResult = result.Data;
            }
            else
            {
                // Handle error or redirect
                NavigationManager.NavigateTo("/student/my-quizes", replace: true);
            }
        }
        catch (Exception ex)
        {
            // Log exception or show error
            Console.WriteLine($"Error loading quiz result: {ex.Message}");
            NavigationManager.NavigateTo("/student/my-quizes", replace: true);
        }
        finally
        {
            AppState.HideLoader();
        }
    }

    private void GoToCard(int index)
    {
        if (index >= 0 && index < TotalCards)
            CurrentCardIndex = index;
    }

    private void GoToPrevCard()
    {
        if (CurrentCardIndex > 0)
            CurrentCardIndex--;
    }

    private void GoToNextCard()
    {
        if (CurrentCardIndex < TotalCards - 1)
            CurrentCardIndex++;
    }

    private void GoToRecommendations()
    {
        NavigationManager.NavigateTo("/student/quiz-recommendations");
    }

    private void GoToMyQuizzes()
    {
        NavigationManager.NavigateTo("/student/my-quizes");
    }
}
