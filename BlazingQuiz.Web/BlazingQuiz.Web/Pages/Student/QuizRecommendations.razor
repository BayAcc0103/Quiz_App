@page "/student/quiz-recommendations"
@using BlazingQuiz.Shared
@using BlazingQuiz.Shared.DTOs
@using BlazingQuiz.Shared.Components.Components
@using BlazingQuiz.Web.Apis
@using System.Text.Json.Serialization;
@inject IAppState AppState
@inject HttpClient HttpClient
@inject IQuizApi QuizApi
@inject IStudentQuizApi StudentQuizApi
@inject QuizAuthStateProvider QuizAuthStateProvider
@inject NavigationManager NavigationManager
@inject QuizState QuizState
@inject QuizImageService QuizImageService

<BackButton />

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h3>Recommended Quizzes for You</h3>
            <p class="text-muted">Based on your quiz performance and preferences</p>
        </div>
    </div>

    @if (_isLoading)
    {
        <Loader />
    }
    else if (_hasError)
    {
        @if (_hasPythonServiceError)
        {
            <div class="alert alert-warning">
                <h4>Recommendation Service Not Available</h4>
                <p>The AI recommendation service is currently not running.</p>
                <p>You can still browse quizzes based on your previous activity and popular choices.</p>
                <div class="mt-3">
                    <button class="btn btn-primary me-2" @onclick="GoToMyQuizzes">
                        Browse My Quizzes
                    </button>
                    <button class="btn btn-outline-secondary" @onclick="GoToPopularQuizzes">
                        Browse Popular Quizzes
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                <h4>Error</h4>
                <p>Unable to load quiz recommendations. Please try again later.</p>
                <button class="btn btn-primary" @onclick="LoadRecommendations">Retry</button>
            </div>
        }
    }
    else if (_recommendations?.Any() != true)
    {
        <div class="alert alert-info">
            <h4>No Recommendations Available</h4>
            <p>Complete more quizzes to receive personalized recommendations.</p>
            <p>The recommendation system analyzes your quiz performance and preferences to suggest relevant quizzes.</p>
            <button class="btn btn-primary" @onclick="GoToMyQuizzes">Browse All Quizzes</button>
        </div>
    }
    else
    {
        <!-- Analysis Summary Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title">Your Performance Analysis</h5>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <div class="display-4 text-primary">@_analysisStats.HighestRatedCategory</div>
                                    <p class="text-muted">Favorite Category</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <div class="display-4 text-success">@_analysisStats.AverageRating.ToString("F1")</div>
                                    <p class="text-muted">Avg. Predicted Rating</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <div class="display-4 text-info">@_analysisStats.RecommendedCount</div>
                                    <p class="text-muted">Recommended Quizzes</p>
                                </div>
                            </div>
                        </div>
                        <p class="mt-3">These recommendations are based on your recent quiz attempts and preferences. The system analyzes your performance patterns to suggest quizzes that match your skill level and interests.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recommendations Section -->
        @if (_recommendations?.Any() == true)
        {
            <h4>Recommended For You</h4>
            <div class="row">
                @foreach (var recommendation in _recommendations)
                {
                    if (recommendation.QuizDetails != null)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="quiz-card-3d position-relative h-100">
                                <!-- Quiz level badge -->
                                <div class="level-badge position-absolute top-0 start-0 m-3">
                                    <span class="badge badge-@(recommendation.QuizDetails.Level?.ToLower() == "easy" ? "success" : recommendation.QuizDetails.Level?.ToLower() == "medium" ? "warning" : "danger")">
                                        @recommendation.QuizDetails.Level
                                    </span>
                                </div>

                                <!-- Bookmark button placeholder -->
                                <button type="button" class="btn btn-bookmark" disabled>
                                    <span class="material-symbols-outlined text-muted">
                                        bookmark_add
                                    </span>
                                </button>

                                <!-- Quiz image -->
                                @if (!string.IsNullOrEmpty(recommendation.QuizDetails.ImagePath))
                                {
                                    <div class="quiz-image-container">
                                        <img src="@QuizImageService.GetImageUrl(recommendation.QuizDetails.ImagePath)"
                                             alt="@recommendation.QuizDetails.Name" class="quiz-image" />
                                    </div>
                                }
                                else
                                {
                                    <div class="quiz-image quiz-image-placeholder d-flex align-items-center justify-content-center">
                                        <i class="bi bi-journal-text fs-1 text-white"></i>
                                    </div>
                                }

                                <!-- Quiz content -->
                                <div class="quiz-content p-3">
                                    <h5 class="fw-bold mb-3 text-truncate" title="@recommendation.QuizDetails.Name">@recommendation.QuizDetails.Name</h5>

                                    <!-- Quiz statistics -->
                                    <div class="quiz-stats d-flex justify-content-between mt-auto">
                                        <div class="stat-item d-flex flex-column align-items-center">
                                            <div class="d-flex align-items-center">
                                                <span class="material-symbols-outlined me-1" style="font-size: 16px;">
                                                    star
                                                </span>
                                                <span class="stat-value fw-bold">@recommendation.PredictedRating.ToString("F1")</span>
                                            </div>
                                            <small class="stat-label text-muted">Predicted Rating</small>
                                        </div>
                                        <div class="stat-item d-flex flex-column align-items-center">
                                            <div class="d-flex align-items-center mb-1">
                                                @if (!string.IsNullOrEmpty(recommendation.QuizDetails.CreatedByAvatarPath))
                                                {
                                                    <img src="@QuizImageService.GetImageUrl(recommendation.QuizDetails.CreatedByAvatarPath)"
                                                         alt="@recommendation.QuizDetails.CreatedByName's avatar"
                                                         class="rounded-circle me-2"
                                                         style="width: 24px; height: 24px; object-fit: cover;"
                                                         title="@recommendation.QuizDetails.CreatedByName" />
                                                }
                                                else
                                                {
                                                    <div class="rounded-circle me-2 d-flex align-items-center justify-content-center bg-secondary text-white"
                                                         style="width: 24px; height: 24px; font-size: 10px;"
                                                         title="@recommendation.QuizDetails.CreatedByName">
                                                        @recommendation.QuizDetails.CreatedByName?.FirstOrDefault().ToString().ToUpper()
                                                    </div>
                                                }
                                                <span class="stat-value fw-bold small">@recommendation.QuizDetails.CreatedByName</span>
                                            </div>
                                            <small class="stat-label text-muted">Creator</small>
                                        </div>
                                    </div>
                                </div>

                                <!-- Action buttons -->
                                <div class="card-button-overlay">
                                    <div class="quiz-actions-section d-flex gap-1">
                                        <button type="button"
                                                class="btn btn-3d btn-3d-info btn-sm flex-fill"
                                                @onclick="() => StartQuiz(recommendation.QuizId)">
                                            Start Quiz
                                        </button>
                                        <a href="student/createroom?quizId=@recommendation.QuizId" class="btn btn-3d btn-3d-primary btn-sm flex-fill">
                                            Create Room
                                        </a>
                                        <button type="button"
                                                class="btn btn-3d btn-3d-success btn-sm flex-fill"
                                                @onclick="() => ShowQuizDetails(recommendation.QuizId)">
                                            View Details
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="alert alert-warning small">
                                <em>Details not available for quiz ID: @recommendation.QuizId</em>
                            </div>
                        </div>
                    }
                }
            </div>
        }
    }
</div>

@code {
    private List<PythonRecommendation> _recommendations = new();
    private bool _isLoading = true;
    private bool _hasError = false;
    private bool _hasPythonServiceError = false;

    // Analysis statistics
    private AnalysisStats _analysisStats = new AnalysisStats();

    protected override async Task OnInitializedAsync()
    {
        await LoadRecommendations();
    }

    private async Task LoadRecommendations()
    {
        _isLoading = true;
        _hasError = false;

        try
        {
            AppState.ShowLoader("Loading recommendations from AI service...");

            var userId = QuizAuthStateProvider.User?.Id;
            if (userId.HasValue)
            {
                // Call the Python service API to get recommendations
                string apiUrl = string.Format("http://localhost:5000/api/recommendations/{0}?n=10", userId.Value);
                var response = await HttpClient.GetAsync(apiUrl);

                if (response.IsSuccessStatusCode)
                {
                    var content = await response.Content.ReadAsStringAsync();
                    var options = new System.Text.Json.JsonSerializerOptions
                    {
                        PropertyNameCaseInsensitive = true
                    };
                    var pythonResponse = System.Text.Json.JsonSerializer.Deserialize<PythonRecommendationResponse>(content, options);

                    if (pythonResponse?.Recommendations != null)
                    {
                        _recommendations = pythonResponse.Recommendations;

                        // Calculate analysis statistics
                        CalculateAnalysisStats();

                        // Get full quiz details for each recommendation
                        foreach (var rec in _recommendations)
                        {
                            try
                            {
                                // Convert string ID to Guid if possible
                                if (Guid.TryParse(rec.QuizId, out Guid quizGuid))
                                {
                                    var quizResult = await QuizApi.GetQuizByIdAsync(quizGuid.ToString());
                                    if (quizResult.IsSuccessStatusCode && quizResult.Content != null)
                                    {
                                        rec.QuizDetails = quizResult.Content;
                                    }
                                }
                            }
                            catch (Exception ex)
                            {
                                Console.WriteLine($"Error loading quiz details for {rec.QuizId}: {ex.Message}");
                            }
                        }

                    }
                    else
                    {
                        _hasError = true;
                    }
                }
                else
                {
                    _hasError = true;
                }
            }
            else
            {
                _hasError = true;
            }
        }
        catch (System.Net.Http.HttpRequestException ex)
        {
            _hasError = true;
            _hasPythonServiceError = true;
            Console.WriteLine($"Python recommendation service not available: {ex.Message}");
        }
        catch (Exception ex)
        {
            _hasError = true;
            Console.WriteLine($"Error loading recommendations from Python service: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            AppState.HideLoader();
        }
    }

    private void CalculateAnalysisStats()
    {
        if (_recommendations?.Any() != true)
        {
            _analysisStats = new AnalysisStats();
            return;
        }

        // Calculate average predicted rating
        var avgRating = _recommendations.Average(r => r.PredictedRating);

        // Count of recommendations
        var recommendationCount = _recommendations.Count;

        // Find most common category (would need to get from Python response or fetch separately)
        var highestRatedCategory = "Mixed Topics"; // Placeholder

        _analysisStats = new AnalysisStats
        {
            AverageRating = avgRating,
            RecommendedCount = recommendationCount,
            HighestRatedCategory = highestRatedCategory
        };
    }

    private async Task StartQuiz(string? quizId)
    {
        if (!string.IsNullOrEmpty(quizId) && Guid.TryParse(quizId, out Guid guid))
        {
            // Get quiz details to pass to QuizState
            var quizResult = await QuizApi.GetQuizByIdAsync(quizId);
            if (quizResult.IsSuccessStatusCode && quizResult.Content != null)
            {
                var quizDetails = new QuizListDto
                {
                    Id = guid,
                    Name = quizResult.Content.Name,
                    Description = quizResult.Content.Description,
                    ImagePath = quizResult.Content.ImagePath,
                    Level = quizResult.Content.Level,
                    TimeInMinutes = quizResult.Content.TimeInMinutes,
                    TotalQuestions = quizResult.Content.TotalQuestions,
                    CategoryId = quizResult.Content.CategoryId,
                    CategoryName = quizResult.Content.CategoryName,
                    CreatedByName = quizResult.Content.CreatedByName,
                    CreatedByAvatarPath = quizResult.Content.CreatedByAvatarPath
                };

                // Start the quiz via the API
                var startResult = await StudentQuizApi.StartQuizAsync(guid);
                if (startResult.IsSuccess)
                {
                    int studentQuizId = startResult.Data;
                    QuizState.StartQuiz(quizDetails, studentQuizId);
                    NavigationManager.NavigateTo("student/quiz");
                }
                else
                {
                    NavigationManager.NavigateTo($"/student/quiz/{guid}");
                }
            }
            else
            {
                NavigationManager.NavigateTo($"/student/quiz/{guid}");
            }
        }
    }

    private void GoToMyQuizzes()
    {
        NavigationManager.NavigateTo("/student/my-quizes");
    }

    private void GoToPopularQuizzes()
    {
        NavigationManager.NavigateTo("/student/popular-quizes");
    }

    private async Task ShowQuizDetails(string quizId)
    {
        if (Guid.TryParse(quizId, out Guid guid))
        {
            NavigationManager.NavigateTo($"/student/quiz/{guid}");
        }
    }

    public class PythonRecommendationResponse
    {
        public int UserId { get; set; }
        public List<PythonRecommendation> Recommendations { get; set; } = new();
        public string Timestamp { get; set; } = string.Empty;
    }

    public class PythonRecommendation
    {
        [JsonPropertyName("quiz_id")]
        public string QuizId { get; set; } = string.Empty;

        [JsonPropertyName("predicted_rating")]
        public double PredictedRating { get; set; }

        [JsonPropertyName("similar_rated_quiz_ids")]
        public List<SimilarRatedQuiz>? SimilarRatedQuizIds { get; set; }

        public QuizDetailsDto? QuizDetails { get; set; }
    }

    public class SimilarRatedQuiz
    {
        [JsonPropertyName("quiz_id")]
        public string QuizId { get; set; } = string.Empty;

        [JsonPropertyName("similarity")]
        public double Similarity { get; set; }
    }
    public class AnalysisStats
    {
        public double AverageRating { get; set; } = 0.0;
        public int RecommendedCount { get; set; } = 0;
        public string HighestRatedCategory { get; set; } = "Mixed Topics";
    }
}