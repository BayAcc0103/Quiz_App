@page "/student/filter-by-category/{CategoryId:int}"
@using System.Linq
@using BlazingQuiz.Shared
@inject IAppState AppState
@inject ICategoryApi CategoryApi
@inject IStudentQuizApi StudentQuizApi
@inject IBookmarkApi BookmarkApi
@inject NavigationManager NavigationManager
@inject QuizState QuizState
@inject QuizImageService QuizImageService
@inject QuizAuthStateProvider QuizAuthStateProvider

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            Quizzes in @(_selectedCategory?.Name ?? "Category")
            @if (_selectedCategory != null)
            {
                <span class="badge bg-primary ms-2">@_filteredQuizzes.Length</span>
            }
        </h2>
        <button class="btn btn-outline-secondary" @onclick="@(() => NavigationManager.NavigateTo("/student/home"))">
            <i class="bi bi-arrow-left"></i> Back to Home
        </button>
    </div>

    @if (_selectedCategory == null)
    {
        <div class="text-center py-4">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading category...</p>
        </div>
    }
    else if (_filteredQuizzes.Length == 0)
    {
        <div class="text-center py-4">
            <i class="bi bi-journal-x fs-1 text-muted"></i>
            <h5 class="mt-2">No quizzes available</h5>
            <p class="text-muted">There are no quizzes in this category yet.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var quiz in _filteredQuizzes)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="quiz-card position-relative">
                        @if (!string.IsNullOrEmpty(quiz.ImagePath))
                        {
                            <img src="@QuizImageService.GetImageUrl(quiz.ImagePath)" alt="@quiz.Name" class="quiz-image" />
                        }
                        else
                        {
                            <div class="quiz-image bg-light d-flex align-items-center justify-content-center">
                                <i class="bi bi-journal-text fs-1 text-muted"></i>
                            </div>
                        }

                        <button type="button" class="btn btn-sm btn-bookmark @(IsBookmarked(quiz.Id) ? "btn-warning" : "btn-outline-warning")"
                                @onclick="() => ToggleBookmarkAsync(quiz)"
                                title="@(IsBookmarked(quiz.Id) ? "Remove bookmark" : "Add to bookmarks")">
                            @(IsBookmarked(quiz.Id) ? "★" : "☆")
                        </button>

                        <div class="quiz-content">
                            <h5 class="fw-bold mb-3">@quiz.Name</h5>

                            <div class="quiz-stats">
                                <div class="stat-item">
                                    <div class="stat-value">@quiz.TotalQuestions</div>
                                    <p class="stat-label mb-0">Questions</p>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">@quiz.TimeInMinutes min</div>
                                    <p class="stat-label mb-0">Time</p>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">@quiz.Level</div>
                                    <p class="stat-label mb-0">Level</p>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">@quiz.CreatedByName</div>
                                    <p class="stat-label mb-0">Creator</p>
                                </div>
                            </div>
                        </div>

                        <div class="quiz-meta">
                            <div class="d-grid gap-2">
                                <button type="button" class="btn btn-quiz-action btn-warning" @onclick="() => ShowQuizTypeSelection(quiz)">Start Quiz</button>
                                <a href="student/createroom?quizId=@quiz.Id" type="button" class="btn btn-quiz-action btn-primary">Create Room</a>
                                <button type="button" class="btn btn-quiz-action btn-info" @onclick="() => ShowQuizDetails(quiz.Id)">View Details</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if(_selectedQuizForType != null)
{
    <Modal Title="Select Quiz Type" OnCancelClick="() => _selectedQuizForType = null" OnActionButtonClick="() => {}" ActionButtonText="Close">
        <div class="quiz-type-selection">
            <div class="d-grid gap-3">
                <button class="btn btn-lg btn-outline-primary p-3 quiz-type-card" @onclick="() => StartQuizWithMode(QuestionType.MCQ)">
                    <h5><i class="bi bi-list-check me-2"></i>Multiple Choice Questions</h5>
                    <p class="mb-0">Answer questions with options, save and go to next, or submit the quiz when complete.</p>
                </button>
                <button class="btn btn-lg btn-outline-success p-3 quiz-type-card" @onclick="() => StartQuizWithMode(QuestionType.Flashcard)">
                    <h5><i class="bi bi-card-text me-2"></i>Flashcards</h5>
                    <p class="mb-0">Review questions and answers by flipping cards. Navigate through questions at your own pace.</p>
                </button>
            </div>
        </div>
    </Modal>
}

<BottomSheet IsOpen="@_showQuizDetails" Title="Quiz Details" IsOpenChanged="OnBottomSheetVisibilityChanged" OnCancelClick="() => _showQuizDetails = false" ShowFooter="false">
    @if (_quizDetails != null)
    {
        <div class="quiz-details-content" style="max-height: 60vh; overflow-y: auto;">
            <div class="quiz-info">
                <h5 class="fw-bold">@_quizDetails.Name</h5>
                @if (!string.IsNullOrEmpty(_quizDetails.Description))
                {
                    <p><strong>Description:</strong> @_quizDetails.Description</p>
                }
                else
                {
                    <p><em>No description provided</em></p>
                }
                <table class="table table-sm">
                    <tr>
                        <td><strong>Category:</strong></td>
                        <td>@_quizDetails.CategoryName</td>
                    </tr>
                    <tr>
                        <td><strong>Created By:</strong></td>
                        <td>@_quizDetails.CreatedByName</td>
                    </tr>
                    <tr>
                        <td><strong>Questions:</strong></td>
                        <td>@_quizDetails.TotalQuestions</td>
                    </tr>
                    <tr>
                        <td><strong>Level:</strong></td>
                        <td>@(_quizDetails.Level ?? "Not specified")</td>
                    </tr>
                    <tr>
                        <td><strong>Time:</strong></td>
                        <td>@_quizDetails.TimeInMinutes minutes</td>
                    </tr>
                </table>
            </div>
        </div>
    }
    else if (_loadingDetails)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
</BottomSheet>

