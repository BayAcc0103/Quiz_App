@code {
    [Parameter] public int CategoryId { get; set; }
    private CategoryDto? _selectedCategory;
    private QuizListDto[] _filteredQuizzes = [];
    private QuizListDto? _selectedQuizForType;
    private Dictionary<Guid, bool> _bookmarkedQuizes = new();

    // For quiz details modal
    private bool _showQuizDetails = false;
    private QuizDetailsDto? _quizDetails;
    private bool _loadingDetails = false;

    private enum QuestionType { MCQ, Flashcard }

    protected override async Task OnInitializedAsync()
    {
        await LoadCategoryAndQuizzes();
    }

    private async Task LoadCategoryAndQuizzes()
    {
        AppState.ShowLoader("Loading category and quizzes...");
        try
        {
            // Get the category by ID
            var allCategories = await CategoryApi.GetCategoriesAsync();
            _selectedCategory = allCategories.FirstOrDefault(c => c.Id == CategoryId);

            if (_selectedCategory != null)
            {
                // Load quizzes for this category
                _filteredQuizzes = await StudentQuizApi.GetActiveQuizesAsync(CategoryId);
                // Load bookmark status for each quiz
                await LoadBookmarkStatusAsync();
            }
        }
        catch (Exception ex)
        {
            AppState.ShowError($"Error loading category and quizzes: {ex.Message}");
        }
        finally
        {
            AppState.HideLoader();
        }
    }

    private async Task LoadBookmarkStatusAsync()
    {
        if (!QuizAuthStateProvider.IsLoggedIn)
        {
            return;
        }

        _bookmarkedQuizes.Clear();
        foreach (var quiz in _filteredQuizzes)
        {
            var result = await BookmarkApi.IsBookmarkedAsync(QuizAuthStateProvider.User.Id, quiz.Id);
            if (result.IsSuccess)
            {
                _bookmarkedQuizes[quiz.Id] = result.Data;
            }
        }
    }

    private async Task ToggleBookmarkAsync(QuizListDto quiz)
    {
        if (!QuizAuthStateProvider.IsLoggedIn)
        {
            NavigationManager.NavigateTo("auth/login");
            return;
        }

        var isBookmarked = _bookmarkedQuizes.ContainsKey(quiz.Id) && _bookmarkedQuizes[quiz.Id];

        if (isBookmarked)
        {
            // Remove bookmark
            var result = await BookmarkApi.RemoveBookmarkAsync(QuizAuthStateProvider.User.Id, quiz.Id);
            if (result.IsSuccess)
            {
                _bookmarkedQuizes[quiz.Id] = false;
            }
        }
        else
        {
            // Add bookmark
            var bookmarkDto = new QuizBookmarkDto
            {
                UserId = QuizAuthStateProvider.User.Id,
                QuizId = quiz.Id,
                QuizName = quiz.Name,
                CategoryName = quiz.CategoryName
            };

            var result = await BookmarkApi.AddBookmarkAsync(bookmarkDto);
            if (result.IsSuccess)
            {
                _bookmarkedQuizes[quiz.Id] = true;
            }
        }
        StateHasChanged();
    }

    private bool IsBookmarked(Guid quizId)
    {
        return _bookmarkedQuizes.ContainsKey(quizId) && _bookmarkedQuizes[quizId];
    }

    private void ShowQuizTypeSelection(QuizListDto quiz)
    {
        _selectedQuizForType = quiz;
    }

    private async Task ShowQuizDetails(Guid quizId)
    {
        _loadingDetails = true;
        _quizDetails = null;
        _showQuizDetails = true;

        try
        {
            var response = await StudentQuizApi.GetQuizDetailsAsync(quizId);
            if (response.IsSuccess && response.Data != null)
            {
                _quizDetails = response.Data;
            }
            else
            {
                AppState.ShowError(response.ErrorMessage ?? "Failed to load quiz details");
                _showQuizDetails = false;
            }
        }
        catch (Exception ex)
        {
            AppState.ShowError($"Error loading quiz details: {ex.Message}");
            _showQuizDetails = false;
        }
        finally
        {
            _loadingDetails = false;
            StateHasChanged();
        }
    }

    private void OnBottomSheetVisibilityChanged(bool isVisible)
    {
        _showQuizDetails = isVisible;
        StateHasChanged();
    }

    private async Task StartQuizWithMode(QuestionType type)
    {
        if (_selectedQuizForType == null) return;

        AppState.ShowLoader("Preparing the quiz...");
        try
        {
            QuizApiResponse<int> response = await StudentQuizApi.StartQuizAsync(_selectedQuizForType.Id);
            if (!response.IsSuccess)
            {
                //Show error alert
                return;
            }
            int studentQuizId = response.Data;

            QuizState.StartQuiz(_selectedQuizForType, studentQuizId);

            // Navigate to appropriate quiz type based on selection
            switch (type)
            {
                case QuestionType.MCQ:
                    NavigationManager.NavigateTo("student/quiz");
                    break;
                case QuestionType.Flashcard:
                    NavigationManager.NavigateTo("student/flashcard-quiz");
                    break;
            }
        }
        catch (Exception ex)
        {
            AppState.ShowError(ex.Message);
        }
        finally
        {
            AppState.HideLoader();
            _selectedQuizForType = null;
        }
    }
}