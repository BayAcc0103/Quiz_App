@page "/student/changepassword"
@using BlazingQuiz.Shared.DTOs
@inject IAuthApi AuthApi
@inject IAppState AppState
@inject NavigationManager NavigationManager

<BackButton />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="hanging-container">
                <div class="hanging-content">
                    <h3>Change Password</h3>
                </div>
                <div class="rope left-rope"></div>
                <div class="rope right-rope"></div>
            </div>
            <div class="card card-3d-raised card-light">
                <div class="card-body">
                    <EditForm Model="_changePasswordDto" OnValidSubmit="ChangePasswordAsync">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label for="currentPassword" class="form-label d-flex justify-content-center">Current Password</label>
                            <input id="currentPassword" type="password" class="form-control form-control-change-password" @bind="_changePasswordDto.CurrentPassword" />
                            <ValidationMessage For="@(() => _changePasswordDto.CurrentPassword)" class="text-danger" />
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label  d-flex justify-content-center">New Password</label>
                            <input id="newPassword" type="password" class="form-control form-control-change-password" @bind="_changePasswordDto.NewPassword" />
                            <ValidationMessage For="@(() => _changePasswordDto.NewPassword)" class="text-danger" />
                        </div>
                        <div class="mb-3">
                            <label for="confirmNewPassword" class="form-label  d-flex justify-content-center">Confirm New Password</label>
                            <input id="confirmNewPassword" type="password" class="form-control form-control-change-password" @bind="_changePasswordDto.ConfirmNewPassword" />
                            <ValidationMessage For="@(() => _changePasswordDto.ConfirmNewPassword)" class="text-danger" />
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-3d btn-3d-primary" disabled="@_isChangingPassword">
                                @if (_isChangingPassword)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Changing...</span>
                                }
                                else
                                {
                                    <span><i class="bi bi-key"></i> Change Password</span>
                                }
                            </button>
                            <button type="button" class="btn btn-3d btn-3d-secondary btn-sm" @onclick="GoBack">Cancel</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private ChangePasswordDto _changePasswordDto = new ChangePasswordDto();
    private bool _isChangingPassword = false;

    private async Task ChangePasswordAsync()
    {
        try
        {
            // Validate passwords match
            if (_changePasswordDto.NewPassword != _changePasswordDto.ConfirmNewPassword)
            {
                AppState.ShowAlert("New password and confirm password do not match.", AlertType.Error);
                return;
            }

            _isChangingPassword = true;
            StateHasChanged();

            AppState.ShowLoader("Changing password...");
            await AuthApi.ChangePasswordAsync(_changePasswordDto);
            AppState.ShowAlert("Password changed successfully!", AlertType.Success);

            // Reset form
            _changePasswordDto = new ChangePasswordDto();
        }
        catch (Exception ex)
        {
            AppState.ShowAlert($"Error changing password: {ex.Message}", AlertType.Error);
        }
        finally
        {
            AppState.HideLoader();
            _isChangingPassword = false;
            StateHasChanged();
        }
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/student/profile");
    }
}
