@page "/student/home"
@page "/student/home/{categoryId:int?}"

@using BlazingQuiz.Shared
@using BlazingQuiz.Web.Components.Shared
@inject IAppState AppState
@inject ICategoryApi CategoryApi
@inject IStudentQuizApi StudentQuizApi
@inject IBookmarkApi BookmarkApi
@inject NavigationManager NavigationManager
@inject QuizState QuizState
@inject QuizImageService QuizImageService
@inject QuizAuthStateProvider QuizAuthStateProvider
@inject CategoryImageService CategoryImageService

<div class="student-home-background">
    <div class="pl-1 pr-1 ">
    <!-- Hero Section for Room Actions -->
    <div class="row mb-5">
        <div class="col-md-6 mb-4">
            <div class="hero-card">
                <div class="d-flex flex-column align-items-center text-center">
                    <div class="mb-3">
                        <i class="bi bi-plus-circle fs-1"></i>
                    </div>
                    <h4>Create Your Own Room</h4>
                    <p>Start a new quiz session and invite your friends to join</p>
                    <a href="/student/createroom" class="btn btn-3d btn-3d-primary mt-3">Create Room</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="hero-card">
                <div class="d-flex flex-column align-items-center text-center">
                    <div class="mb-3">
                        <i class="bi bi-door-open fs-1"></i>
                    </div>
                    <h4>Join Existing Room</h4>
                    <p>Enter a room code to participate in an active quiz session</p>
                    <a href="/student/joinroom" class="btn btn-3d btn-3d-success mt-3">Join Room</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Category Section for Visible Categories -->
    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="/student/categories" class="btn btn-outline-primary">View All</a>
        </div>
        @if (_visibleCategories.Length > 0)
        {
            @for (int row = 0; row < 2; row++)
            {
                <div class="row mb-3">
                    @for (int col = 0; col < 6; col++)
                    {
                        var index = row * 6 + col;
                        if (index < _visibleCategories.Length)
                        {
                            var category = _visibleCategories[index];
                            <div class="col-md-2 col-4 mb-3">
                                <div class="category-item text-center" @onclick="() => OnCategoryClick(category)">
                                    @if (!string.IsNullOrEmpty(category.ImagePath))
                                    {
                                        <img src="@CategoryImageService.GetImageUrl(category.ImagePath)" alt="@category.Name" class="category-image img-fluid rounded mb-2" />
                                    }
                                    else
                                    {
                                        <div class="category-placeholder rounded mb-2 d-flex align-items-center justify-content-center">
                                            <i class="bi bi-folder fs-3 text-muted"></i>
                                        </div>
                                    }
                                    <div class="category-name">@category.Name</div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-2 col-4 mb-3">
                                <div class="category-item-placeholder"></div>
                            </div>
                        }
                    }
                </div>
            }
        }
        else
        {
            <div class="text-center py-4">
                <p class="text-muted">No categories available at the moment.</p>
            </div>
        }
    </div>

    <!-- Random Easy Level Quizzes Section -->
    <div class="mb-5">
        <h3 class="mb-4">Easy</h3>
        @if (_randomEasyQuizzes.Length > 0)
        {
            <QuizSlider QuizList="_randomEasyQuizzes"
                        OnQuizTypeSelection="ShowQuizTypeSelection"
                        OnQuizDetails="ShowQuizDetails"
                        OnBookmarkToggle="OnBookmarkToggled" />
        }
        else
        {
            <div class="text-center py-4">
                <p class="text-muted">No easy level quizzes available at the moment.</p>
            </div>
        }
    </div>

    <!-- Random Hard Level Quizzes Section -->
    <div class="mb-5">
        <h3 class="mb-4">Hard</h3>
        @if (_randomHardQuizzes.Length > 0)
        {
            <QuizSlider QuizList="_randomHardQuizzes"
                        OnQuizTypeSelection="ShowQuizTypeSelection"
                        OnQuizDetails="ShowQuizDetails"
                        OnBookmarkToggle="OnBookmarkToggled" />
        }
        else
        {
            <div class="text-center py-4">
                <p class="text-muted">No hard level quizzes available at the moment.</p>
            </div>
        }
    </div>

    <!-- Recent Quizzes Section -->
    <div class="mb-5">
        <h3 class="mb-4">Recently Added</h3>
        @if (_recentQuizzes.Length > 0)
        {
            <QuizSlider QuizList="_recentQuizzes"
                        OnQuizTypeSelection="ShowQuizTypeSelection"
                        OnQuizDetails="ShowQuizDetails"
                        OnBookmarkToggle="OnBookmarkToggled" />
        }
        else
        {
            <div class="text-center py-4">
                <p class="text-muted">No recently added quizzes available at the moment.</p>
            </div>
        }
    </div>

    <!-- Category Selection -->
    <div class="category-select-container">
        <div class="row align-items-center">
            <div class="col-md-4">
                <label class="form-label fw-bold mb-0 fs-5">Select Category</label>
            </div>
            <div class="col-md-8">
                <select class="category-select" @bind="_selectedCategoryId" @bind:after="OnSelectedCategoryChanged">
                    <option value="0">All Categories</option>
                    @foreach (var category in _categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <!-- Quiz Grid -->
    <div class="row">
        @if(!_isLoading && _quizes.Length == 0)
        {
            var message = _selectedCategoryId == 0 ? "Select a category to view quizzes." : "No quizzes available for this category.";
            <div class="col-12">
                <div class="empty-state">
                    <div class="mb-3">
                        <i class="bi bi-journal-x fs-1 text-muted"></i>
                    </div>
                    <h5>@message</h5>
                    <p class="text-muted">Come back later or try a different category</p>
                </div>
            </div>
        }
        else
        {
            @foreach (var q in _quizes)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="quiz-card position-relative">
                        @if (!string.IsNullOrEmpty(q.ImagePath))
                        {
                            <img src="@QuizImageService.GetImageUrl(q.ImagePath)" alt="@q.Name" class="quiz-image" />
                        }
                        else
                        {
                            <div class="quiz-image bg-light d-flex align-items-center justify-content-center">
                                <i class="bi bi-journal-text fs-1 text-muted"></i>
                            </div>
                        }
                        
                        <button type="button" class="btn btn-sm btn-bookmark @(IsBookmarked(q.Id) ? "btn-warning" : "btn-outline-warning")"
                                @onclick="() => ToggleBookmarkAsync(q)"
                                title="@(IsBookmarked(q.Id) ? "Remove bookmark" : "Add to bookmarks")">
                            @(IsBookmarked(q.Id) ? "â˜…" : "â˜†")
                        </button>
                        
                        <div class="quiz-content">
                            @* <span class="category-badge">@q.CategoryName</span> *@
                            <h5 class="fw-bold mb-3">@q.Name</h5>
                            
                            <div class="quiz-stats">
                                <div class="stat-item">
                                    <div class="stat-value">@q.TotalQuestions</div>
                                    <p class="stat-label mb-0">Questions</p>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">@q.TimeInMinutes min</div>
                                    <p class="stat-label mb-0">Time</p>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">@q.Level</div>
                                    <p class="stat-label mb-0">Level</p>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">@q.CreatedByName</div>
                                    <p class="stat-label mb-0">Creator</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="quiz-meta">
                            <div class="d-grid gap-2">
                                <button type="button" class="btn btn-quiz-action btn-warning" @onclick="() => ShowQuizTypeSelection(q)">Start Quiz</button>
                                <a href="student/createroom?quizId=@q.Id" type="button" class="btn btn-quiz-action btn-primary">Create Room</a>
                                <button type="button" class="btn btn-quiz-action btn-info" @onclick="() => ShowQuizDetails(q.Id)">View Details</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

