<BottomSheet IsOpen="@_showQuizDetails" Title="Quiz Details" IsOpenChanged="OnBottomSheetVisibilityChanged" OnCancelClick="() => _showQuizDetails = false" ShowFooter="false">
    @if (_quizDetails != null)
    {
        <div class="quiz-details-content" style="max-height: 60vh; overflow-y: auto;">
            <div class="quiz-info">
                <h5 class="fw-bold">@_quizDetails.Name</h5>
                @if (!string.IsNullOrEmpty(_quizDetails.Description))
                {
                    <p><strong>Description:</strong> @_quizDetails.Description</p>
                }
                else
                {
                    <p><em>No description provided</em></p>
                }
                <table class="table table-sm">
                    <tr>
                        <td><strong>Category:</strong></td>
                        <td>@_quizDetails.CategoryName</td>
                    </tr>
                    <tr>
                        <td><strong>Created By:</strong></td>
                        <td>@_quizDetails.CreatedByName</td>
                    </tr>
                    <tr>
                        <td><strong>Questions:</strong></td>
                        <td>@_quizDetails.TotalQuestions</td>
                    </tr>
                    <tr>
                        <td><strong>Level:</strong></td>
                        <td>@(_quizDetails.Level ?? "Not specified")</td>
                    </tr>
                    <tr>
                        <td><strong>Time:</strong></td>
                        <td>@_quizDetails.TimeInMinutes minutes</td>
                    </tr>
                </table>
            </div>

            @if (_quizDetails.RecentRatings.Any() || _quizDetails.RecentComments.Any())
            {
                <div class="recent-feedback mt-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6>Recent Feedback</h6>
                        <button type="button" class="btn btn-sm btn-outline-primary" @onclick="() => ShowAllFeedback(_quizDetails.Id)">View All Feedback</button>
                    </div>
                    @{
                        // Create a dictionary to hold combined feedback
                        var combinedFeedback = new Dictionary<int, dynamic>();

                        // Add ratings to the dictionary
                        foreach (var rating in _quizDetails.RecentRatings)
                        {
                            combinedFeedback[rating.StudentId] = new {
                                StudentId = rating.StudentId,
                                StudentName = rating.StudentName,
                                Score = rating.Score,
                                Comment = (string)null,
                                CreatedOn = rating.CreatedOn
                            };
                        }

                        // Add comments to the dictionary, combining with existing ratings if possible
                        foreach (var comment in _quizDetails.RecentComments)
                        {
                            if (combinedFeedback.ContainsKey(comment.StudentId))
                            {
                                // Update existing entry with comment
                                var existing = combinedFeedback[comment.StudentId];
                                combinedFeedback[comment.StudentId] = new {
                                    StudentId = comment.StudentId,
                                    StudentName = comment.StudentName,
                                    Score = existing.Score,
                                    Comment = comment.Content,
                                    CreatedOn = comment.CreatedOn
                                };
                            }
                            else
                            {
                                // Add new entry with just comment
                                combinedFeedback[comment.StudentId] = new {
                                    StudentId = comment.StudentId,
                                    StudentName = comment.StudentName,
                                    Score = (string)null,
                                    Comment = comment.Content,
                                    CreatedOn = comment.CreatedOn
                                };
                            }
                        }

                        // Sort by date and take top 3
                        var sortedFeedback = combinedFeedback.Values
                            .OrderByDescending(f => f.CreatedOn)
                            .Take(3)
                            .ToList();
                    }

                    <div class="feedback-list">
                        @foreach (var feedback in sortedFeedback)
                        {
                            <div class="feedback-item p-3 mb-2 border rounded">
                                <div class="d-flex justify-content-between mb-1">
                                    <strong>@feedback.StudentName</strong>
                                    @if (!string.IsNullOrEmpty(feedback.Score))
                                    {
                                        <span class="badge bg-primary">@GetRatingIcon(feedback.Score) @GetRatingDisplayText(feedback.Score)</span>
                                    }
                                </div>
                                <small class="text-muted">@feedback.CreatedOn.ToString("MMM dd, yyyy HH:mm")</small>

                                @if (!string.IsNullOrEmpty(feedback.Comment))
                                {
                                    <div class="mt-2">
                                        <p class="mb-0">@feedback.Comment</p>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="recent-feedback mt-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6>Recent Feedback</h6>
                        <button type="button" class="btn btn-sm btn-outline-primary" @onclick="() => ShowAllFeedback(_quizDetails.Id)">View All Feedback</button>
                    </div>
                    <p class="text-muted"><em>No feedback yet</em></p>
                </div>
            }
        </div>
    }
    else if (_loadingDetails)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
</BottomSheet>

<BottomSheet IsOpen="@_showAllFeedback" Title="All Feedback" IsOpenChanged="OnAllFeedbackBottomSheetVisibilityChanged" OnCancelClick="() => _showAllFeedback = false" ShowFooter="false">
    @if (_allFeedback != null)
    {
        <div class="quiz-details-content" style="max-height: 60vh; overflow-y: auto;">
            @if (_allFeedback.CombinedFeedback.Any())
            {
                <div class="feedback-list">
                    @foreach (var feedback in _allFeedback.CombinedFeedback)
                    {
                        <div class="feedback-item p-3 mb-3 border rounded">
                            <div class="d-flex justify-content-between mb-2">
                                <strong>@feedback.StudentName</strong>
                                @if (!string.IsNullOrEmpty(feedback.Score))
                                {
                                    <span class="badge bg-primary">@GetRatingIcon(feedback.Score) @GetRatingDisplayText(feedback.Score)</span>
                                }
                            </div>
                            <small class="text-muted">@feedback.CreatedOn.ToString("MMM dd, yyyy HH:mm")</small>

                            @if (!string.IsNullOrEmpty(feedback.Comment))
                            {
                                <div class="mt-2">
                                    <p class="mb-0">@feedback.Comment</p>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-3">
                    <p class="text-muted mb-0">No feedback yet for this quiz</p>
                </div>
            }
        </div>
    }
    else if (_loadingAllFeedback)
    {
        <div class="text-center py-3">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
</BottomSheet>

@code {
    private CategoryDto[] _categories = [];
    private QuizListDto[] _quizes = [];
    private QuizListDto[] _randomEasyQuizzes = [];
    private QuizListDto[] _randomHardQuizzes = [];
    private int _selectedCategoryId;
    private bool _isLoading;
    private QuizListDto? _selectedQuizForType;
    private Dictionary<Guid, bool> _bookmarkedQuizes = new();

    // For quiz details modal
    private bool _showQuizDetails = false;
    private QuizDetailsDto? _quizDetails;
    private bool _loadingDetails = false;

    // For all feedback modal
    private bool _showAllFeedback = false;
    private QuizAllFeedbackDto? _allFeedback;
    private bool _loadingAllFeedback = false;

    private enum QuestionType { MCQ, Flashcard }

    protected override async Task OnInitializedAsync()
    {
        AppState.ShowLoader("Loading categories and quizes...");
        try
        {
            _isLoading = true;
            var categoriesTask = CategoryApi.GetCategoriesAsync();
            //Load/Fetch quizes
            _quizes = await StudentQuizApi.GetActiveQuizesAsync(_selectedCategoryId);
            _categories = await categoriesTask;

            // Load random easy quizzes for the slider
            await LoadRandomEasyQuizzesAsync();
            // Load random hard quizzes for the slider
            await LoadRandomHardQuizzesAsync();

            // Load bookmark status for each quiz
            await LoadBookmarkStatusAsync();
        }
        catch (Exception ex)
        {
            throw;
        }
        finally
        {
            AppState.HideLoader();
            _isLoading = false;
        }
    }

    private async Task OnSelectedCategoryChanged()
    {
        AppState.ShowLoader("Loading quizes...");
        _quizes = await StudentQuizApi.GetActiveQuizesAsync(_selectedCategoryId);
        await LoadBookmarkStatusAsync();
        // Refresh the random easy quizzes as well
        await LoadRandomEasyQuizzesAsync();
        // Refresh the random hard quizzes as well
        await LoadRandomHardQuizzesAsync();
        AppState.HideLoader();
    }

    // Removed old StartQuizAsync method - replaced with new quiz type selection functionality

    private string GetRatingIcon(string? rating)
    {
        if (string.IsNullOrEmpty(rating)) return "ðŸ˜";

        return rating?.ToLower().Trim() switch
        {
            "very bad" => "ðŸ˜ž",
            "bad" => "ðŸ˜Ÿ",
            "normal" => "ðŸ˜",
            "good" => "ðŸ˜„",
            "very good" => "ðŸ˜",
            _ => "ðŸ˜" // Default to neutral face for unknown ratings
        };
    }

    private string GetRatingDisplayText(string? rating)
    {
        if (string.IsNullOrEmpty(rating)) return "";

        return rating?.ToLower().Trim() switch
        {
            "very bad" => "Very Bad",
            "bad" => "Bad",
            "normal" => "Normal",
            "good" => "Good",
            "very good" => "Very Good",
            _ => rating ?? "" // Default to original value for unknown ratings
        };
    }

    private async Task LoadBookmarkStatusAsync()
    {
        if (!QuizAuthStateProvider.IsLoggedIn)
        {
            return;
        }

        _bookmarkedQuizes.Clear();
        foreach (var quiz in _quizes)
        {
            var result = await BookmarkApi.IsBookmarkedAsync(QuizAuthStateProvider.User.Id, quiz.Id);
            if (result.IsSuccess)
            {
                _bookmarkedQuizes[quiz.Id] = result.Data;
            }
        }
    }

    private async Task ToggleBookmarkAsync(QuizListDto quiz)
    {
        if (!QuizAuthStateProvider.IsLoggedIn)
        {
            NavigationManager.NavigateTo("auth/login");
            return;
        }

        var isBookmarked = _bookmarkedQuizes.ContainsKey(quiz.Id) && _bookmarkedQuizes[quiz.Id];

        if (isBookmarked)
        {
            // Remove bookmark
            var result = await BookmarkApi.RemoveBookmarkAsync(QuizAuthStateProvider.User.Id, quiz.Id);
            if (result.IsSuccess)
            {
                _bookmarkedQuizes[quiz.Id] = false;
            }
        }
        else
        {
            // Add bookmark
            var bookmarkDto = new QuizBookmarkDto
            {
                UserId = QuizAuthStateProvider.User.Id,
                QuizId = quiz.Id,
                QuizName = quiz.Name,
                CategoryName = quiz.CategoryName
            };

            var result = await BookmarkApi.AddBookmarkAsync(bookmarkDto);
            if (result.IsSuccess)
            {
                _bookmarkedQuizes[quiz.Id] = true;
            }
        }
    }

    private async Task OnBookmarkToggled(QuizListDto quiz)
    {
        // Refresh bookmark status when bookmark is toggled in the slider
        var result = await BookmarkApi.IsBookmarkedAsync(QuizAuthStateProvider.User.Id, quiz.Id);
        if (result.IsSuccess)
        {
            _bookmarkedQuizes[quiz.Id] = result.Data;
        }
    }

    private bool IsBookmarked(Guid quizId)
    {
        return _bookmarkedQuizes.ContainsKey(quizId) && _bookmarkedQuizes[quizId];
    }

    private void ShowQuizTypeSelection(QuizListDto quiz)
    {
        _selectedQuizForType = quiz;
    }

    private async Task ShowQuizDetails(Guid quizId)
    {
        _loadingDetails = true;
        _quizDetails = null;
        _showQuizDetails = true;

        try
