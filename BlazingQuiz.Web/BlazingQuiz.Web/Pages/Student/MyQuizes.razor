@page "/student/my-quizes"
@inject IAppState AppState
@inject IStudentQuizApi StudentQuizApi
@inject IJSRuntime JSRuntime

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-10">

            <div class="hanging-container">
                <div class="hanging-content">
                    <h3>Quiz History</h3>
                </div>
                <div class="rope left-rope"></div>
                <div class="rope right-rope"></div>
            </div>

            <div class="card card-3d-raised card-light">
                <div class="card-body">

                    <table class="table table-striped table-hover table-3d d-md-table">
                        <thead>
                            <tr>
                                <th>Quiz Name</th>
                                <th>Status</th>
                                <th class="d-none d-md-table-cell">Started</th>
                                <th class="d-none d-md-table-cell">Time</th>
                                <th class="text-center d-md-table-cell">Total</th>
                                <th class="d-md-table-cell"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (_currentPageQuizzes.Any())
                            {
                                @foreach (var quiz in _currentPageQuizzes)
                                {
                                    <tr>
                                        <td>@quiz.QuizName</td>
                                        <td>@quiz.Status</td>
                                        <td class="d-none d-md-table-cell">
                                            @quiz.StartedOn.ToString("dd MM yyyy HH:mm")
                                        </td>
                                        <td class="d-none d-md-table-cell">
                                            @if (quiz.CompletedOn.HasValue && quiz.StartedOn != default)
                                            {
                                                @FormatTimeSpan(quiz.CompletedOn.Value - quiz.StartedOn)
                                            }
                                            else if (quiz.Status == "Exited")
                                            {
                                                <span>Quiz Exited</span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td class="text-center d-md-table-cell">@quiz.Total</td>
                                        <td class="d-md-table-cell">
                                            @if (quiz.Status == "Completed")
                                            {
                                                <a href="/student/quiz-result/@quiz.Id"
                                                   class="btn btn-3d btn-3d-primary btn-xs">
                                                    <span class="material-symbols-outlined">
                                                        arrow_forward
                                                    </span>
                                                </a>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">No quizzes found</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <!-- Pagination -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">

                            <!-- Previous -->
                            <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                                <button class="page-link"
                                        disabled="@(CurrentPage == 1)"
                                        @onclick="() => NavigateToPage(CurrentPage - 1)">
                                        <span class="material-symbols-outlined">
                                        chevron_left
                                        </span>
                                </button>
                            </li>

                            @if (TotalPages <= 5) // Show fewer pages on mobile
                            {
                                @for (int i = 1; i <= TotalPages; i++)
                                {
                                    var pageNumber = i;

                                    <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                        <button class="page-link"
                                                @onclick="() => NavigateToPage(pageNumber)"
                                                title="Go to page @pageNumber">
                                            @pageNumber
                                        </button>
                                    </li>
                                }
                            }
                            else
                            {
                                @if (CurrentPage <= 3)
                                {
                                    @for (int i = 1; i <= 4; i++)
                                    {
                                        var pageNumber = i;

                                        <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                            <button class="page-link"
                                                    @onclick="() => NavigateToPage(pageNumber)"
                                                    title="Go to page @pageNumber">
                                                @pageNumber
                                            </button>
                                        </li>
                                    }

                                    <li class="page-item disabled d-none d-md-block">
                                        <span class="page-link">...</span>
                                    </li>
                                    <li class="page-item d-md-none">
                                        <span class="page-link">…</span>
                                    </li>

                                    <li class="page-item">
                                        <button class="page-link"
                                                @onclick="() => NavigateToPage(TotalPages)"
                                                title="Go to page @TotalPages">
                                            @TotalPages
                                        </button>
                                    </li>
                                }
                                else if (CurrentPage >= TotalPages - 2)
                                {
                                    <li class="page-item">
                                        <button class="page-link"
                                                @onclick="() => NavigateToPage(1)"
                                                title="Go to page 1">
                                            1
                                        </button>
                                    </li>

                                    <li class="page-item disabled d-none d-md-block">
                                        <span class="page-link">...</span>
                                    </li>
                                    <li class="page-item d-md-none">
                                        <span class="page-link">…</span>
                                    </li>

                                    @for (int i = TotalPages - 3; i <= TotalPages; i++)
                                    {
                                        var pageNumber = i;

                                        <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                            <button class="page-link"
                                                    @onclick="() => NavigateToPage(pageNumber)"
                                                    title="Go to page @pageNumber">
                                                @pageNumber
                                            </button>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="page-item">
                                        <button class="page-link"
                                                @onclick="() => NavigateToPage(1)"
                                                title="Go to page 1">
                                            1
                                        </button>
                                    </li>

                                    <li class="page-item disabled d-none d-md-block">
                                        <span class="page-link">...</span>
                                    </li>
                                    <li class="page-item d-md-none">
                                        <span class="page-link">…</span>
                                    </li>

                                    @for (int i = CurrentPage - 1; i <= CurrentPage + 1; i++)
                                    {
                                        var pageNumber = i;

                                        <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                            <button class="page-link"
                                                    @onclick="() => NavigateToPage(pageNumber)"
                                                    title="Go to page @pageNumber">
                                                @pageNumber
                                            </button>
                                        </li>
                                    }

                                    <li class="page-item disabled d-none d-md-block">
                                        <span class="page-link">...</span>
                                    </li>
                                    <li class="page-item d-md-none">
                                        <span class="page-link">…</span>
                                    </li>

                                    <li class="page-item">
                                        <button class="page-link"
                                                @onclick="() => NavigateToPage(TotalPages)"
                                                title="Go to page @TotalPages">
                                            @TotalPages
                                        </button>
                                    </li>
                                }
                            }

                            <!-- Next -->
                            <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                                <button class="page-link"
                                        disabled="@(CurrentPage == TotalPages)"
                                        @onclick="() => NavigateToPage(CurrentPage + 1)">
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>
                                </button>
                            </li>

                        </ul>
                    </nav>

                </div>
            </div>

        </div>
    </div>
</div>

@code {
    private const int PageSize = 10;

    private List<StudentQuizDto> _quizzes = new();
    private List<StudentQuizDto> _currentPageQuizzes = new();

    private int CurrentPage = 1;
    private int TotalPages;
    private int TotalCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadQuizzesAsync();
    }

    private async Task LoadQuizzesAsync()
    {
        AppState.ShowLoader("Loading quizzes");

        try
        {
            var result = await StudentQuizApi.GetStudentQuizesAsync(0, 1000);
            _quizzes = result.Records.ToList();
            TotalCount = result.TotalCount;

            TotalPages = (int)Math.Ceiling(TotalCount / (double)PageSize);

            await NavigateToPage(1);
        }
        catch (Exception ex)
        {
            AppState.ShowError(ex.Message);
        }
        finally
        {
            AppState.HideLoader();
        }
    }

    private Task NavigateToPage(int page)
    {
        if (page < 1 || page > TotalPages)
            return Task.CompletedTask;

        CurrentPage = page;

        _currentPageQuizzes = _quizzes
            .Skip((page - 1) * PageSize)
            .Take(PageSize)
            .ToList();

        return Task.CompletedTask;
    }

    private string FormatTimeSpan(TimeSpan time)
    {
        return $"{(int)time.TotalMinutes:D2}:{time.Seconds:D2}";
    }
}
