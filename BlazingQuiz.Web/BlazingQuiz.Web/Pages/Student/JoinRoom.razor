@page "/student/joinroom"
@using BlazingQuiz.Shared.DTOs
@using BlazingQuiz.Web.Apis
@using BlazingQuiz.Shared
@using Microsoft.AspNetCore.Authorization
@inject IRoomApi RoomApi
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

@attribute [Authorize(Roles = nameof(UserRole.Student))]

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Hanging container with 2 ropes -->
            <div class="hanging-container">
                <div class="hanging-content">
                    <h3>Join Quiz Room</h3>
                    <p>Enter your room code below</p>
                </div>
                <!-- Ropes connecting hanging container to main card -->
                <div class="rope left-rope"></div>
                <div class="rope right-rope"></div>
            </div>

            <div class="card card-3d-raised card-light">
                <div class="card-body">
                    <EditForm Model="joinRoomDto" OnValidSubmit="HandleJoinRoom">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="roomCode" class="form-label">Room Code *</label>
                            <input id="roomCode" class="form-control form-control-lg text-center" @bind="joinRoomDto.Code" maxlength="6" style="font-size: 2rem; letter-spacing: 0.5rem;" />
                            <ValidationMessage For="@(() => joinRoomDto.Code)" class="text-danger" />
                            <div class="form-text">Enter the 6-digit room code provided by your teacher or peer</div>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger mb-3 card-3d-raised" role="alert">
                                @errorMessage
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-3d btn-3d-primary" disabled="@isJoining">
                                @if (isJoining)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Joining...</span>
                                }
                                else
                                {
                                    <span><i class="bi bi-door-open"></i>Join Room</span>
                                }
                            </button>
                            <button type="button" class="btn btn-3d btn-3d-secondary btn-sm" @onclick="Cancel">Cancel</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private JoinRoomDto joinRoomDto = new();
    private bool isJoining = false;
    private string? errorMessage;

    private async Task HandleJoinRoom()
    {
        isJoining = true;
        errorMessage = null; // Clear previous error
        StateHasChanged();
        
        try
        {
            var room = await RoomApi.JoinRoomAsync(joinRoomDto);
            // Navigate to room page
            Navigation.NavigateTo($"/student/room/{room.Id}");
        }
        catch (Refit.ApiException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Conflict)
        {
            errorMessage = "Room is full. Cannot join room that has reached maximum capacity.";
        }
        catch (Refit.ApiException ex) when (ex.StatusCode == System.Net.HttpStatusCode.NotFound)
        {
            errorMessage = "Room not found. Please check the room code and try again.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to join room: {ex.Message}";
        }
        finally
        {
            isJoining = false;
            StateHasChanged();
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/student/home");
    }

    private async Task ShowAlertAsync(string message, string title = "Error") => 
        await JSRuntime.InvokeVoidAsync("alert", $"{title}\n{message}");
}