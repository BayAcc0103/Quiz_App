@page "/teacher/quizes/{quizId:guid}/view-students"

@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = nameof(UserRole.Teacher))]

@inject IQuizApi QuizApi
@inject IAppState AppState

<BackButton />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-10">

            <div class="hanging-container">
                <div class="hanging-content">
                    <h3>Students for Quiz: @_quizName</h3>
                    <p>Category: @_categoryName</p>
                </div>
                <div class="rope left-rope"></div>
                <div class="rope right-rope"></div>
            </div>

            <div class="card card-3d-raised card-light">
                <div class="card-body">
                    <table class="table table-striped table-hover table-3d d-md-table">
                        <thead>
                            <tr>
                                <th>Student Name</th>
                                <th>Started</th>
                                <th class="d-none d-md-table-cell">Completed</th>
                                <th class="d-none d-md-table-cell">Status</th>
                                <th class="text-center d-md-table-cell">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (_currentPageStudents.Any())
                            {
                                @foreach (var student in _currentPageStudents)
                                {
                                    <tr>
                                        <td>@student.Name</td>
                                        <td>@student.StartedOn.ToString("dd MM yyyy HH:mm")</td>
                                        <td class="d-none d-md-table-cell">
                                            @if (student.CompletedOn.HasValue)
                                            {
                                                @student.CompletedOn.Value.ToString("dd MM yyyy HH:mm")
                                            }
                                            else if (student.Status == "Exited")
                                            {
                                                <span>Quiz Exited</span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td class="d-none d-md-table-cell">@student.Status</td>
                                        <td class="text-center d-md-table-cell">@student.Total</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">No students found</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <!-- Pagination -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">

                            <!-- Previous -->
                            <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                                <button class="page-link"
                                        disabled="@(CurrentPage == 1)"
                                        @onclick="() => NavigateToPage(CurrentPage - 1)">
                                        <span class="material-symbols-outlined">
                                        chevron_left
                                        </span>
                                </button>
                            </li>

                            @if (TotalPages <= 5) // Show fewer pages on mobile
                            {
                                @for (int i = 1; i <= TotalPages; i++)
                                {
                                    var pageNumber = i;

                                    <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                        <button class="page-link"
                                                @onclick="() => NavigateToPage(pageNumber)"
                                                title="Go to page @pageNumber">
                                            @pageNumber
                                        </button>
                                    </li>
                                }
                            }
                            else
                            {
                                @if (CurrentPage <= 3)
                                {
                                    @for (int i = 1; i <= 4; i++)
                                    {
                                        var pageNumber = i;

                                        <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                            <button class="page-link"
                                                    @onclick="() => NavigateToPage(pageNumber)"
                                                    title="Go to page @pageNumber">
                                                @pageNumber
                                            </button>
                                        </li>
                                    }

                                    <li class="page-item disabled d-none d-md-block">
                                        <span class="page-link">...</span>
                                    </li>
                                    <li class="page-item d-md-none">
                                        <span class="page-link">…</span>
                                    </li>

                                    <li class="page-item">
                                        <button class="page-link"
                                                @onclick="() => NavigateToPage(TotalPages)"
                                                title="Go to page @TotalPages">
                                            @TotalPages
                                        </button>
                                    </li>
                                }
                                else if (CurrentPage >= TotalPages - 2)
                                {
                                    <li class="page-item">
                                        <button class="page-link"
                                                @onclick="() => NavigateToPage(1)"
                                                title="Go to page 1">
                                            1
                                        </button>
                                    </li>

                                    <li class="page-item disabled d-none d-md-block">
                                        <span class="page-link">...</span>
                                    </li>
                                    <li class="page-item d-md-none">
                                        <span class="page-link">…</span>
                                    </li>

                                    @for (int i = TotalPages - 3; i <= TotalPages; i++)
                                    {
                                        var pageNumber = i;

                                        <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                            <button class="page-link"
                                                    @onclick="() => NavigateToPage(pageNumber)"
                                                    title="Go to page @pageNumber">
                                                @pageNumber
                                            </button>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="page-item">
                                        <button class="page-link"
                                                @onclick="() => NavigateToPage(1)"
                                                title="Go to page 1">
                                            1
                                        </button>
                                    </li>

                                    <li class="page-item disabled d-none d-md-block">
                                        <span class="page-link">...</span>
                                    </li>
                                    <li class="page-item d-md-none">
                                        <span class="page-link">…</span>
                                    </li>

                                    @for (int i = CurrentPage - 1; i <= CurrentPage + 1; i++)
                                    {
                                        var pageNumber = i;

                                        <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                            <button class="page-link"
                                                    @onclick="() => NavigateToPage(pageNumber)"
                                                    title="Go to page @pageNumber">
                                                @pageNumber
                                            </button>
                                        </li>
                                    }

                                    <li class="page-item disabled d-none d-md-block">
                                        <span class="page-link">...</span>
                                    </li>
                                    <li class="page-item d-md-none">
                                        <span class="page-link">…</span>
                                    </li>

                                    <li class="page-item">
                                        <button class="page-link"
                                                @onclick="() => NavigateToPage(TotalPages)"
                                                title="Go to page @TotalPages">
                                            @TotalPages
                                        </button>
                                    </li>
                                }
                            }

                            <!-- Next -->
                            <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                                <button class="page-link"
                                        disabled="@(CurrentPage == TotalPages)"
                                        @onclick="() => NavigateToPage(CurrentPage + 1)">
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>
                                </button>
                            </li>

                        </ul>
                    </nav>

                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private const int PageSize = 10;

    [Parameter]
    public Guid QuizId { get; set; }

    private List<TeacherQuizStudentDto> _students = new();
    private List<TeacherQuizStudentDto> _currentPageStudents = new();

    private string? _quizName;
    private string? _categoryName;
    private bool _fetchQuizInfo = true;

    private int CurrentPage = 1;
    private int TotalPages;
    private int TotalCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadStudentsAsync();
    }

    private async Task LoadStudentsAsync()
    {
        AppState.ShowLoader("Loading students");
        try
        {
            var result = await QuizApi.GetQuizStudentsAsync(QuizId, 0, 1000, _fetchQuizInfo);
            if (_fetchQuizInfo)
            {
                _fetchQuizInfo = false;
                _quizName = result.QuizName;
                _categoryName = result.CategoryName;
            }

            _students = result.Students.Records.ToList();
            TotalCount = result.Students.TotalCount;
            TotalPages = (int)Math.Ceiling(TotalCount / (double)PageSize);

            await NavigateToPage(1);
        }
        catch (Exception ex)
        {
            AppState.ShowError(ex.Message);
        }
        finally
        {
            AppState.HideLoader();
        }
    }

    private Task NavigateToPage(int page)
    {
        if (page < 1 || page > TotalPages)
            return Task.CompletedTask;

        CurrentPage = page;

        _currentPageStudents = _students
            .Skip((page - 1) * PageSize)
            .Take(PageSize)
            .ToList();

        StateHasChanged();
        return Task.CompletedTask;
    }
}