@page "/teacher/quizes/{quizId:guid}/view-students"

@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = nameof(UserRole.Teacher))]

@inject IQuizApi QuizApi
@inject IAppState AppState

<BackButton />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-10">

            <div class="hanging-container">
                <div class="hanging-content">
                    <h3>Students for Quiz: @_quizName</h3>
                    <p>Category: @_categoryName</p>
                </div>
                <div class="rope left-rope"></div>
                <div class="rope right-rope"></div>
            </div>

            <!-- Tabs -->
            <ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="individual-tab" data-bs-toggle="tab" data-bs-target="#individual" 
                            type="button" role="tab" aria-controls="individual" aria-selected="true">Individual Attempts</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="room-tab" data-bs-toggle="tab" data-bs-target="#room" 
                            type="button" role="tab" aria-controls="room" aria-selected="false">Room Attempts</button>
                </li>
            </ul>

            <div class="tab-content" id="myTabContent">
                <!-- Individual Attempts Tab -->
                <div class="tab-pane fade show active" id="individual" role="tabpanel" aria-labelledby="individual-tab">
                    <div class="card card-3d-raised card-light">
                        <div class="card-body">
                            <table class="table table-striped table-hover table-3d d-md-table">
                                <thead>
                                    <tr>
                                        <th>Student Name</th>
                                        <th>Started</th>
                                        <th class="d-none d-md-table-cell">Completed</th>
                                        <th class="d-none d-md-table-cell">Status</th>
                                        <th class="text-center d-md-table-cell">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (_currentPageStudents.Any())
                                    {
                                        @foreach (var student in _currentPageStudents)
                                        {
                                            <tr>
                                                <td>@student.Name</td>
                                                <td>@student.StartedOn.ToString("dd MM yyyy HH:mm")</td>
                                                <td class="d-none d-md-table-cell">
                                                    @if (student.CompletedOn.HasValue)
                                                    {
                                                        @student.CompletedOn.Value.ToString("dd MM yyyy HH:mm")
                                                    }
                                                    else if (student.Status == "Exited")
                                                    {
                                                        <span>Quiz Exited</span>
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td class="d-none d-md-table-cell">@student.Status</td>
                                                <td class="text-center d-md-table-cell">@student.Total</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center">No students found</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <!-- Pagination -->
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">

                                    <!-- Previous -->
                                    <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                                        <button class="page-link"
                                                disabled="@(CurrentPage == 1)"
                                                @onclick="() => NavigateToPage(CurrentPage - 1)">
                                            <span class="material-symbols-outlined">
                                                chevron_left
                                            </span>
                                        </button>
                                    </li>

                                    @if (TotalPages <= 5) // Show fewer pages on mobile
                                    {
                                        @for (int i = 1; i <= TotalPages; i++)
                                        {
                                            var pageNumber = i;

                                            <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                                <button class="page-link"
                                                        @onclick="() => NavigateToPage(pageNumber)"
                                                        title="Go to page @pageNumber">
                                                    @pageNumber
                                                </button>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        @if (CurrentPage <= 3)
                                        {
                                            @for (int i = 1; i <= 4; i++)
                                            {
                                                var pageNumber = i;

                                                <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                                    <button class="page-link"
                                                            @onclick="() => NavigateToPage(pageNumber)"
                                                            title="Go to page @pageNumber">
                                                        @pageNumber
                                                    </button>
                                                </li>
                                            }

                                            <li class="page-item disabled d-none d-md-block">
                                                <span class="page-link">...</span>
                                            </li>
                                            <li class="page-item d-md-none">
                                                <span class="page-link">…</span>
                                            </li>

                                            <li class="page-item">
                                                <button class="page-link"
                                                        @onclick="() => NavigateToPage(TotalPages)"
                                                        title="Go to page @TotalPages">
                                                    @TotalPages
                                                </button>
                                            </li>
                                        }
                                        else if (CurrentPage >= TotalPages - 2)
                                        {
                                            <li class="page-item">
                                                <button class="page-link"
                                                        @onclick="() => NavigateToPage(1)"
                                                        title="Go to page 1">
                                                    1
                                                </button>
                                            </li>

                                            <li class="page-item disabled d-none d-md-block">
                                                <span class="page-link">...</span>
                                            </li>
                                            <li class="page-item d-md-none">
                                                <span class="page-link">…</span>
                                            </li>

                                            @for (int i = TotalPages - 3; i <= TotalPages; i++)
                                            {
                                                var pageNumber = i;

                                                <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                                    <button class="page-link"
                                                            @onclick="() => NavigateToPage(pageNumber)"
                                                            title="Go to page @pageNumber">
                                                        @pageNumber
                                                    </button>
                                                </li>
                                            }
                                        }
                                        else
                                        {
                                            <li class="page-item">
                                                <button class="page-link"
                                                        @onclick="() => NavigateToPage(1)"
                                                        title="Go to page 1">
                                                    1
                                                </button>
                                            </li>

                                            <li class="page-item disabled d-none d-md-block">
                                                <span class="page-link">...</span>
                                            </li>
                                            <li class="page-item d-md-none">
                                                <span class="page-link">…</span>
                                            </li>

                                            @for (int i = CurrentPage - 1; i <= CurrentPage + 1; i++)
                                            {
                                                var pageNumber = i;

                                                <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                                    <button class="page-link"
                                                            @onclick="() => NavigateToPage(pageNumber)"
                                                            title="Go to page @pageNumber">
                                                        @pageNumber
                                                    </button>
                                                </li>
                                            }

                                            <li class="page-item disabled d-none d-md-block">
                                                <span class="page-link">...</span>
                                            </li>
                                            <li class="page-item d-md-none">
                                                <span class="page-link">…</span>
                                            </li>

                                            <li class="page-item">
                                                <button class="page-link"
                                                        @onclick="() => NavigateToPage(TotalPages)"
                                                        title="Go to page @TotalPages">
                                                    @TotalPages
                                                </button>
                                            </li>
                                        }
                                    }

                                    <!-- Next -->
                                    <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                                        <button class="page-link"
                                                disabled="@(CurrentPage == TotalPages)"
                                                @onclick="() => NavigateToPage(CurrentPage + 1)">
                                            <span class="material-symbols-outlined">
                                                chevron_right
                                            </span>
                                        </button>
                                    </li>

                                </ul>
                            </nav>

                        </div>
                    </div>
                </div>

                <!-- Room Attempts Tab -->
                <div class="tab-pane fade" id="room" role="tabpanel" aria-labelledby="room-tab">
                    <div class="card card-3d-raised card-light">
                        <div class="card-body">
                            <table class="table table-striped table-hover table-3d d-md-table">
                                <thead>
                                    <tr>
                                        <th>Student Name</th>
                                        <th>Room Name</th>
                                        <th>Started</th>
                                        <th class="d-none d-md-table-cell">Completed</th>
                                        <th class="d-none d-md-table-cell">Status</th>
                                        <th class="text-center d-md-table-cell">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (_currentPageRoomStudents.Any())
                                    {
                                        @foreach (var student in _currentPageRoomStudents)
                                        {
                                            <tr>
                                                <td>@student.Name</td>
                                                <td>@student.RoomName</td>
                                                <td>@student.StartedOn.ToString("dd MM yyyy HH:mm")</td>
                                                <td class="d-none d-md-table-cell">
                                                    @if (student.CompletedOn.HasValue)
                                                    {
                                                        @student.CompletedOn.Value.ToString("dd MM yyyy HH:mm")
                                                    }
                                                    else if (student.Status == "Exited")
                                                    {
                                                        <span>Quiz Exited</span>
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td class="d-none d-md-table-cell">@student.Status</td>
                                                <td class="text-center d-md-table-cell">@student.Total</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center">No room attempts found</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <!-- Pagination for Room Attempts -->
                            <nav aria-label="Room Attempts Page navigation">
                                <ul class="pagination justify-content-center">

                                    <!-- Previous -->
                                    <li class="page-item @(_currentRoomPage == 1 ? "disabled" : "")">
                                        <button class="page-link"
                                                disabled="@(_currentRoomPage == 1)"
                                                @onclick="() => NavigateToRoomPage(_currentRoomPage - 1)">
                                            <span class="material-symbols-outlined">
                                                chevron_left
                                            </span>
                                        </button>
                                    </li>

                                    @if (_totalRoomPages <= 5) // Show fewer pages on mobile
                                    {
                                        @for (int i = 1; i <= _totalRoomPages; i++)
                                        {
                                            var pageNumber = i;

                                            <li class="page-item @(pageNumber == _currentRoomPage ? "active" : "")">
                                                <button class="page-link"
                                                        @onclick="() => NavigateToRoomPage(pageNumber)"
                                                        title="Go to page @pageNumber">
                                                    @pageNumber
                                                </button>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        @if (_currentRoomPage <= 3)
                                        {
                                            @for (int i = 1; i <= 4; i++)
                                            {
                                                var pageNumber = i;

                                                <li class="page-item @(pageNumber == _currentRoomPage ? "active" : "")">
                                                    <button class="page-link"
                                                            @onclick="() => NavigateToRoomPage(pageNumber)"
                                                            title="Go to page @pageNumber">
                                                        @pageNumber
                                                    </button>
                                                </li>
                                            }

                                            <li class="page-item disabled d-none d-md-block">
                                                <span class="page-link">...</span>
                                            </li>
                                            <li class="page-item d-md-none">
                                                <span class="page-link">…</span>
                                            </li>

                                            <li class="page-item">
                                                <button class="page-link"
                                                        @onclick="() => NavigateToRoomPage(_totalRoomPages)"
                                                        title="Go to page @_totalRoomPages">
                                                    @_totalRoomPages
                                                </button>
                                            </li>
                                        }
                                        else if (_currentRoomPage >= _totalRoomPages - 2)
                                        {
                                            <li class="page-item">
                                                <button class="page-link"
                                                        @onclick="() => NavigateToRoomPage(1)"
                                                        title="Go to page 1">
                                                    1
                                                </button>
                                            </li>

                                            <li class="page-item disabled d-none d-md-block">
                                                <span class="page-link">...</span>
                                            </li>
                                            <li class="page-item d-md-none">
                                                <span class="page-link">…</span>
                                            </li>

                                            @for (int i = _totalRoomPages - 3; i <= _totalRoomPages; i++)
                                            {
                                                var pageNumber = i;

                                                <li class="page-item @(pageNumber == _currentRoomPage ? "active" : "")">
                                                    <button class="page-link"
                                                            @onclick="() => NavigateToRoomPage(pageNumber)"
                                                            title="Go to page @pageNumber">
                                                        @pageNumber
                                                    </button>
                                                </li>
                                            }
                                        }
                                        else
                                        {
                                            <li class="page-item">
                                                <button class="page-link"
                                                        @onclick="() => NavigateToRoomPage(1)"
                                                        title="Go to page 1">
                                                    1
                                                </button>
                                            </li>

                                            <li class="page-item disabled d-none d-md-block">
                                                <span class="page-link">...</span>
                                            </li>
                                            <li class="page-item d-md-none">
                                                <span class="page-link">…</span>
                                            </li>

                                            @for (int i = _currentRoomPage - 1; i <= _currentRoomPage + 1; i++)
                                            {
                                                var pageNumber = i;

                                                <li class="page-item @(pageNumber == _currentRoomPage ? "active" : "")">
                                                    <button class="page-link"
                                                            @onclick="() => NavigateToRoomPage(pageNumber)"
                                                            title="Go to page @pageNumber">
                                                        @pageNumber
                                                    </button>
                                                </li>
                                            }

                                            <li class="page-item disabled d-none d-md-block">
                                                <span class="page-link">...</span>
                                            </li>
                                            <li class="page-item d-md-none">
                                                <span class="page-link">…</span>
                                            </li>

                                            <li class="page-item">
                                                <button class="page-link"
                                                        @onclick="() => NavigateToRoomPage(_totalRoomPages)"
                                                        title="Go to page @_totalRoomPages">
                                                    @_totalRoomPages
                                                </button>
                                            </li>
                                        }
                                    }

                                    <!-- Next -->
                                    <li class="page-item @(_currentRoomPage == _totalRoomPages ? "disabled" : "")">
                                        <button class="page-link"
                                                disabled="@(_currentRoomPage == _totalRoomPages)"
                                                @onclick="() => NavigateToRoomPage(_currentRoomPage + 1)">
                                            <span class="material-symbols-outlined">
                                                chevron_right
                                            </span>
                                        </button>
                                    </li>

                                </ul>
                            </nav>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private const int PageSize = 10;

    [Parameter]
    public Guid QuizId { get; set; }

    // Individual attempts data
    private List<TeacherQuizStudentDto> _students = new();
    private List<TeacherQuizStudentDto> _currentPageStudents = new();

    // Room attempts data
    private List<TeacherQuizStudentForRoomDto> _roomStudents = new();
    private List<TeacherQuizStudentForRoomDto> _currentPageRoomStudents = new();

    private string? _quizName;
    private string? _categoryName;
    private bool _fetchQuizInfo = true;

    // Individual attempts pagination
    private int CurrentPage = 1;
    private int TotalPages;
    private int TotalCount;

    // Room attempts pagination
    private int _currentRoomPage = 1;
    private int _totalRoomPages;
    private int _totalRoomCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadStudentsAsync();
        await LoadRoomStudentsAsync();
    }

    private async Task LoadStudentsAsync()
    {
        AppState.ShowLoader("Loading individual attempts");
        try
        {
            var result = await QuizApi.GetQuizStudentsAsync(QuizId, 0, 1000, _fetchQuizInfo);
            if (_fetchQuizInfo)
            {
                _fetchQuizInfo = false;
                _quizName = result.QuizName;
                _categoryName = result.CategoryName;
            }

            _students = result.Students.Records.ToList();
            TotalCount = result.Students.TotalCount;
            TotalPages = (int)Math.Ceiling(TotalCount / (double)PageSize);

            await NavigateToPage(1);
        }
        catch (Exception ex)
        {
            AppState.ShowError(ex.Message);
        }
        finally
        {
            AppState.HideLoader();
        }
    }

    private async Task LoadRoomStudentsAsync()
    {
        AppState.ShowLoader("Loading room attempts");
        try
        {
            var result = await QuizApi.GetQuizStudentsForRoomAsync(QuizId, 0, 1000, false);

            _roomStudents = result.Students.Records.ToList();
            _totalRoomCount = result.Students.TotalCount;
            _totalRoomPages = (int)Math.Ceiling(_totalRoomCount / (double)PageSize);

            await NavigateToRoomPage(1);
        }
        catch (Exception ex)
        {
            AppState.ShowError($"Error loading room attempts: {ex.Message}");
        }
        finally
        {
            AppState.HideLoader();
        }
    }

    private Task NavigateToPage(int page)
    {
        if (page < 1 || page > TotalPages)
            return Task.CompletedTask;

        CurrentPage = page;

        _currentPageStudents = _students
            .Skip((page - 1) * PageSize)
            .Take(PageSize)
            .ToList();

        StateHasChanged();
        return Task.CompletedTask;
    }

    private Task NavigateToRoomPage(int page)
    {
        if (page < 1 || page > _totalRoomPages)
            return Task.CompletedTask;

        _currentRoomPage = page;

        _currentPageRoomStudents = _roomStudents
            .Skip((page - 1) * PageSize)
            .Take(PageSize)
            .ToList();

        StateHasChanged();
        return Task.CompletedTask;
    }
}