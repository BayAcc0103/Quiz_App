@page "/teacher/home"
@using BlazingQuiz.Shared
@using BlazingQuiz.Shared.DTOs
@using Microsoft.AspNetCore.Authorization
@inject IAppState AppState
@inject IQuizApi QuizApi
@attribute [Authorize(Roles = nameof(UserRole.Teacher))]

<div class="container">
    <h1>Teacher Dashboard</h1>
    <p>Welcome to your teacher dashboard. Here you can manage your questions, categories, and quizzes.</p>

    @if(_data != null)
    {
        <div class="row">
            <div class="col-sm-4">
                <div class="box bg-white p-3">
                    <h4 class="fw-bold">Quizzes</h4>
                    <hr/>
                    <h3>@_data.TotalQuizzes</h3>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="box bg-white p-3">
                <h4 class="fw-bold">Questions</h4>
                <hr/>
                <h3>@_data.TotalQuestions</h3>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="box bg-white p-3">
                <h4 class="fw-bold">Categories</h4>
                <hr />
                <h3>@_data.TotalCategories</h3>
                </div>
            </div>
        </div>

        <!-- Quiz Notifications Box -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="box bg-white p-3">
                    <h4 class="fw-bold d-flex justify-content-between align-items-center">
                        <span>Quiz Notifications</span>
                        <button class="btn btn-outline-primary btn-sm" @onclick="ToggleQuizNotifications">
                            @if (_showQuizNotifications)
                            {
                                <text>Hide</text>
                            }
                            else
                            {
                                <text>Show</text>
                            }
                        </button>
                    </h4>
                    <hr />

                    @if (_showQuizNotifications)
                    {
                        @if (_data.QuizNotifications != null && _data.QuizNotifications.Any())
                        {
                            <div class="list-group">
                                @foreach (var notification in _data.QuizNotifications)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-start @(notification.IsRead ? "bg-light" : "")">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">@notification.Content</div>
                                            <small class="text-muted">@notification.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No quiz notifications available.</p>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Feedback Notifications Box -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="box bg-white p-3">
                    <h4 class="fw-bold d-flex justify-content-between align-items-center">
                        <span>Feedback Notifications</span>
                        <button class="btn btn-outline-primary btn-sm" @onclick="ToggleFeedbackNotifications">
                            @if (_showFeedbackNotifications)
                            {
                                <text>Hide</text>
                            }
                            else
                            {
                                <text>Show</text>
                            }
                        </button>
                    </h4>
                    <hr />

                    @if (_showFeedbackNotifications)
                    {
                        @if (_data.FeedbackNotifications != null && _data.FeedbackNotifications.Any())
                        {
                            <div class="list-group">
                                @foreach (var notification in _data.FeedbackNotifications)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-start @(notification.IsRead ? "bg-light" : "")">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">@notification.Content</div>
                                            <small class="text-muted">@notification.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No feedback notifications available.</p>
                        }
                    }
                </div>
            </div>
        </div>
    }
</div>

@code {
    private TeacherHomeDataDto? _data;
    private bool _showQuizNotifications = false;
    private bool _showFeedbackNotifications = false;

    protected override async Task OnInitializedAsync()
    {
        AppState.ShowLoader("Loading data");
        _data = await QuizApi.GetTeacherHomeDataAsync();
        AppState.HideLoader();
    }

    private void ToggleQuizNotifications()
    {
        _showQuizNotifications = !_showQuizNotifications;
    }

    private void ToggleFeedbackNotifications()
    {
        _showFeedbackNotifications = !_showFeedbackNotifications;
    }
}