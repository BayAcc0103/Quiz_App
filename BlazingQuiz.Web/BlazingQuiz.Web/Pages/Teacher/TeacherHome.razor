@page "/teacher/home"
@using BlazingQuiz.Shared
@using BlazingQuiz.Shared.DTOs
@using Microsoft.AspNetCore.Authorization
@inject IAppState AppState
@inject IQuizApi QuizApi
@attribute [Authorize(Roles = nameof(UserRole.Teacher))]

<div>
    <h1>Teacher Dashboard</h1>
    <p>Welcome to your teacher dashboard. Here you can manage your questions, categories, and quizzes.</p>

    @if(_data != null)
    {
        <!-- Stats Cards Row -->
        <div class="row mt-4">
            <div class="col-sm-4 mb-4">
                <div class="dashboard-card-3d">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Quizzes</h4>
                    </div>
                    <div class="card-body text-center">
                        <div class="card-value">@_data.TotalQuizzes</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 mb-4">
                <div class="dashboard-card-3d">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Questions</h4>
                    </div>
                    <div class="card-body text-center">
                        <div class="card-value">@_data.TotalQuestions</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 mb-4">
                <div class="dashboard-card-3d">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Categories</h4>
                    </div>
                    <div class="card-body text-center">
                        <div class="card-value">@_data.TotalCategories</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quiz Notifications Box and Feedback Notifications Box on the same row -->
        <div class="row mt-4">
            <div class="col-sm-6 mb-4">
                <div class="notification-card-3d">
                    <div class="card-header">
                        <span>Quiz Notifications</span>
                        <button class="btn btn-outline-3d btn-sm" @onclick="ToggleQuizNotifications">
                            @if (_showQuizNotifications)
                            {
                                <text>Hide</text>
                            }
                            else
                            {
                                <text>Show</text>
                            }
                        </button>
                    </div>
                    <div class="card-body">
                        @if (_showQuizNotifications)
                        {
                            @if (_data.QuizNotifications != null && _data.QuizNotifications.Any())
                            {
                                @foreach (var notification in _data.QuizNotifications)
                                {
                                    <div class="notification-list-item @(notification.IsRead ? "bg-light" : "bg-white")">
                                        <div class="notification-content">@notification.Content</div>
                                        <small class="notification-date">@notification.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                        <div class="notification-actions">
                                            @if (!notification.IsRead)
                                            {
                                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => MarkNotificationAsRead(notification.Id)" title="Mark as read">
                                                    <span class="material-symbols-outlined">
                                                        visibility
                                                    </span>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-outline-secondary" disabled title="Already read">
                                                    <span class="material-symbols-outlined">
                                                        check
                                                    </span>
                                                </button>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted mb-0">No quiz notifications available.</p>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="col-sm-6 mb-4">
                <div class="notification-card-3d">
                    <div class="card-header">
                        <span>Feedback Notifications</span>
                        <button class="btn btn-outline-3d btn-sm" @onclick="ToggleFeedbackNotifications">
                            @if (_showFeedbackNotifications)
                            {
                                <text>Hide</text>
                            }
                            else
                            {
                                <text>Show</text>
                            }
                        </button>
                    </div>
                    <div class="card-body">
                        @if (_showFeedbackNotifications)
                        {
                            @if (_data.FeedbackNotifications != null && _data.FeedbackNotifications.Any())
                            {
                                @foreach (var notification in _data.FeedbackNotifications)
                                {
                                    <div class="notification-list-item @(notification.IsRead ? "bg-light" : "bg-white")">
                                        <div class="notification-content">@notification.Content</div>
                                        <small class="notification-date">@notification.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                        <div class="notification-actions">
                                            @if (!notification.IsRead)
                                            {
                                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => MarkNotificationAsRead(notification.Id)" title="Mark as read">
                                                    <span class="material-symbols-outlined">
                                                        visibility
                                                    </span>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-outline-secondary" disabled title="Already read">
                                                    <span class="material-symbols-outlined">
                                                        check
                                                    </span>
                                                </button>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted mb-0">No feedback notifications available.</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private TeacherHomeDataDto? _data;
    private bool _showQuizNotifications = false;
    private bool _showFeedbackNotifications = false;

    protected override async Task OnInitializedAsync()
    {
        AppState.ShowLoader("Loading data");
        _data = await QuizApi.GetTeacherHomeDataAsync();
        AppState.HideLoader();
    }

    private void ToggleQuizNotifications()
    {
        _showQuizNotifications = !_showQuizNotifications;
    }

    private void ToggleFeedbackNotifications()
    {
        _showFeedbackNotifications = !_showFeedbackNotifications;
    }

    private async Task MarkNotificationAsRead(int notificationId)
    {
        try
        {
            // Assuming there's a method to mark notifications as read in IQuizApi
            // If not available, you might need to add it to the API
            // await QuizApi.MarkNotificationAsReadAsync(notificationId);

            // Update the UI immediately to reflect the change
            var quizNotification = _data?.QuizNotifications?.FirstOrDefault(n => n.Id == notificationId);
            if (quizNotification != null)
            {
                quizNotification.IsRead = true;
            }

            var feedbackNotification = _data?.FeedbackNotifications?.FirstOrDefault(n => n.Id == notificationId);
            if (feedbackNotification != null)
            {
                feedbackNotification.IsRead = true;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error marking notification as read: {ex.Message}");
            // Optionally show an error message to the user
        }
    }

    private int GetUnreadNotificationsCount(List<NotificationDto> notifications)
    {
        return notifications?.Count(n => !n.IsRead) ?? 0;
    }
}