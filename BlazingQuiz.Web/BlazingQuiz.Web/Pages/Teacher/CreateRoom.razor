@page "/teacher/createroom"
@using BlazingQuiz.Shared.DTOs
@using BlazingQuiz.Web.Apis
@using BlazingQuiz.Shared
@using BlazingQuiz.Web.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = nameof(UserRole.Teacher))]
@inject IRoomApi RoomApi
@inject IStudentQuizApi StudentQuizApi
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject QuizImageService QuizImageService

@code {
    [Parameter] 
    [SupplyParameterFromQuery]
    public Guid? QuizId { get; set; }

    private void IncrementMaxParticipants()
    {
        if (createRoomDto.MaxParticipants < 50)
        {
            createRoomDto.MaxParticipants++;
            StateHasChanged();
        }
    }

    private void DecrementMaxParticipants()
    {
        if (createRoomDto.MaxParticipants > 1)
        {
            createRoomDto.MaxParticipants--;
            StateHasChanged();
        }
    }
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <!-- Hanging container with 2 ropes -->
            <div class="hanging-container">
                <div class="hanging-content">
                    <h3>Create Quiz Room</h3>
                </div>
                <!-- Ropes connecting hanging container to main card -->
                <div class="rope left-rope"></div>
                <div class="rope right-rope"></div>
            </div>
        </div>
    </div>

    @if (createdRoom != null)
    {
        <div class="row justify-content-center mb-4">
            <div class="col-md-12">
                <div class="alert alert-success" role="alert">
                    <h5 class="d-flex justify-content-center">Room Created Successfully!</h5>
                    <p><strong>Room Name:</strong> @createdRoom.Name</p>
                    <p><strong>Room Code:</strong> <span class="badge bg-primary fs-5">@createdRoom.Code</span></p>
                    @if (createdRoom.QuizName != null)
                    {
                        <p><strong>Quiz:</strong> @createdRoom.QuizName</p>
                    }
                    <p>Share this code with others to join the room.</p>
                    <div class="d-flex justify-content-center">
                        <button type="button" class="btn btn-3d btn-3d-outline btn-sm" @onclick="CopyCode">Copy Code</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <EditForm Model="createRoomDto" OnValidSubmit="HandleCreateRoom">
        <DataAnnotationsValidator />

        <div class="row">
            <!-- Left Container: Room Name, Description, Maximum Participants -->
            <div class="col-md-6 mb-4">
                <div class="card card-3d-raised card-light">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Room Details</h5>

                        <div class="mb-3">
                            <label for="roomName" class="form-label">Room Name *</label>
                            <input id="roomName" class="form-control form-control-lg text-center" @bind="createRoomDto.Name" placeholder="Enter room name" style="font-size: 1.2rem; letter-spacing: 0.2rem;" />
                            <ValidationMessage For="() => createRoomDto.Name" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="roomDescription" class="form-label">Description</label>
                            <textarea id="roomDescription" class="form-control text-center" @bind="createRoomDto.Description" rows="4" placeholder="Enter room description" style="font-size: 1.1rem; letter-spacing: 0.1rem;"></textarea>
                            <ValidationMessage For="() => createRoomDto.Description" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="maxParticipants" class="form-label">Maximum Player</label>
                            <div class="input-group">
                                <button type="button" class="btn btn-spinner-down" @onclick="() => DecrementMaxParticipants()">-</button>
                                <input id="maxParticipants" type="number" class="form-control form-control-lg text-center custom-number-input" @bind="createRoomDto.MaxParticipants" min="1" max="50" style="font-size: 1.1rem; letter-spacing: 0.1rem;" />
                                <button type="button" class="btn btn-spinner-up" @onclick="() => IncrementMaxParticipants()">+</button>
                            </div>
                            <ValidationMessage For="() => createRoomDto.MaxParticipants" class="text-danger" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Container: Quiz selection -->
            <div class="col-md-6 mb-4">
                <div class="card card-3d-raised-right card-light">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Quiz Selection</h5>

                        <div class="mb-3">
                            <label class="form-label">Select Quiz</label>
                            <div class="input-group">
                                <input id="selectedQuiz" class="form-control form-control-right text-center" value="@SelectedQuizName" readonly placeholder="No quiz selected" style="font-size: 1.1rem; letter-spacing: 0.1rem;" />
                                @if (createRoomDto.QuizId.HasValue)
                                {
                                    <button type="button" class="btn btn-3d-primary-style-no-radius" @onclick="OpenQuizSelectionModal">Choose Quiz</button>
                                    <button type="button" class="btn btn-3d-clear-style" @onclick="ClearSelectedQuiz">Clear</button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-3d-primary-style" @onclick="OpenQuizSelectionModal">Choose Quiz</button>
                                }
                            </div>
                        </div>

                        @if (createRoomDto.QuizId.HasValue && quizNames.ContainsKey(createRoomDto.QuizId.Value))
                        {
                            @if (availableQuizzes.Any(q => q.Id == createRoomDto.QuizId.Value))
                            {
                                var quizDetails = availableQuizzes.First(q => q.Id == createRoomDto.QuizId.Value);
                                <div class="selected-quiz-container">
                                    <div class="row">
                                        <!-- Left side: Quiz name and image -->
                                        <div class="col-md-6">
                                            <div class="quiz-image-container">
                                                @if (!string.IsNullOrEmpty(quizDetails.ImagePath))
                                                {
                                                    <img src="@QuizImageService.GetImageUrl(quizDetails.ImagePath)" alt="@quizDetails.Name" class="quiz-image" />
                                                }
                                                else
                                                {
                                                    <div class="quiz-image-placeholder">
                                                        <i class="bi bi-card-checklist quiz-placeholder-icon"></i>
                                                    </div>
                                                }
                                            </div>
                                            <div class="quiz-title text-center mt-3">
                                                <h5>@quizDetails.Name</h5>
                                            </div>
                                        </div>

                                        <!-- Right side: Quiz details in individual boxes aligned vertically -->
                                        <div class="col-md-6">
                                            <div class="quiz-details-vertical-container">
                                                <div class="quiz-detail-card mb-2">
                                                    <i class="bi bi-list-ol detail-icon"></i>
                                                    <div class="detail-text">
                                                        <span class="detail-value">@quizDetails.TotalQuestions</span>
                                                        <span class="detail-label">Questions</span>
                                                    </div>
                                                </div>

                                                <div class="quiz-detail-card mb-2">
                                                    <i class="bi bi-bar-chart detail-icon"></i>
                                                    <div class="detail-text">
                                                        <span class="detail-value">@quizDetails.Level</span>
                                                        <span class="detail-label">Level</span>
                                                    </div>
                                                </div>

                                                <div class="quiz-detail-card">
                                                    <i class="bi bi-clock detail-icon"></i>
                                                    <div class="detail-text">
                                                        <span class="detail-value">@quizDetails.TimeInMinutes min</span>
                                                        <span class="detail-label">Time</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger mt-3 card-3d-raised" role="alert">
                                @errorMessage
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Buttons centered below both containers -->
        <div class="row">
            <div class="col-12">
                <div class="mb-2 d-grid gap-2 d-flex justify-content-center">
                    <button type="submit" class="btn btn-3d btn-3d-primary" disabled="@isCreating" style="width: auto;">
                        @if (isCreating)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Creating...</span>
                        }
                        else
                        {
                            <span><i class="bi bi-plus-circle"></i> Create Room</span>
                        }
                    </button>
                    <button type="button" class="btn btn-3d btn-3d-secondary btn-sm" @onclick="Cancel" style="width: auto;">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </EditForm>
</div>

<QuizSelectionModal @ref="quizSelectionModal" IsVisible="@quizSelectionModalVisible" IsVisibleChanged="OnQuizSelectionModalVisibilityChanged" Quizzes="availableQuizzes" OnQuizSelected="OnQuizSelected" />

@code {
    private CreateRoomDto createRoomDto = new();
    private RoomDto? createdRoom;
    private bool isCreating = false;
    private QuizSelectionModal? quizSelectionModal;
    private bool quizSelectionModalVisible = false;
    private string SelectedQuizName = "No quiz selected";
    private List<QuizListDto> availableQuizzes = new();
    private Dictionary<Guid, string> quizNames = new();
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        createRoomDto.MaxParticipants = 50; // Default max participants
        
        // Load all available quizzes
        await LoadAvailableQuizzes();
        
        // If a quiz ID was provided in the URL, pre-select it
        if (QuizId.HasValue)
        {
            await PreSelectQuiz(QuizId.Value);
        }
    }

    private async Task HandleCreateRoom()
    {
        isCreating = true;
        StateHasChanged();
        
        try
        {
            createdRoom = await RoomApi.CreateRoomAsync(createRoomDto);
            await ShowAlertAsync("Room created successfully!", "Success");
        }
        catch (Exception ex)
        {
            await ShowAlertAsync($"Failed to create room: {ex.Message}", "Error");
        }
        finally
        {
            isCreating = false;
            StateHasChanged();
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/teacher");
    }

    private async Task CopyCode()
    {
        if (createdRoom != null)
        {
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", createdRoom.Code);
            await ShowAlertAsync("Room code copied to clipboard!", "Copied");
        }
    }

    private async Task ShowAlertAsync(string message, string title = "Error") => 
        await JSRuntime.InvokeVoidAsync("alert", $"{title}\n{message}");

    private async Task LoadAvailableQuizzes()
    {
        try
        {
            // Load all active quizzes for the teacher (similar to student home page)
            availableQuizzes = (await StudentQuizApi.GetActiveQuizesAsync(0)).ToList(); // 0 means all categories
            quizNames = availableQuizzes.ToDictionary(q => q.Id, q => q.Name);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading available quizzes: {ex.Message}");
        }
    }

    private async Task PreSelectQuiz(Guid quizId)
    {
        // Check if the quiz exists in the loaded list
        var quiz = availableQuizzes.FirstOrDefault(q => q.Id == quizId);
        if (quiz != null)
        {
            createRoomDto.QuizId = quizId;
            SelectedQuizName = quiz.Name;
        }
        else
        {
            // If the quiz is not in the currently loaded list, try to fetch its details specifically
            try
            {
                // Load all quizzes to see if the specific quiz exists
                var allQuizzes = (await StudentQuizApi.GetActiveQuizesAsync(0)).ToList();
                var specificQuiz = allQuizzes.FirstOrDefault(q => q.Id == quizId);
                if (specificQuiz != null)
                {
                    // Update available quizzes and quiz names
                    availableQuizzes = allQuizzes;
                    quizNames = allQuizzes.ToDictionary(q => q.Id, q => q.Name);
                    
                    createRoomDto.QuizId = quizId;
                    SelectedQuizName = specificQuiz.Name;
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error pre-selecting quiz: {ex.Message}");
            }
        }
        StateHasChanged();
    }

    private void OpenQuizSelectionModal()
    {
        quizSelectionModalVisible = true;
        StateHasChanged();
    }

    private async Task OnQuizSelectionModalVisibilityChanged(bool isVisible)
    {
        quizSelectionModalVisible = isVisible;
        StateHasChanged();
    }

    private void ClearSelectedQuiz()
    {
        createRoomDto.QuizId = null;
        SelectedQuizName = "No quiz selected";
        StateHasChanged();
    }

    private async Task OnQuizSelected(Guid? quizId)
    {
        if (quizId.HasValue)
        {
            createRoomDto.QuizId = quizId;
            // Update the quiz name to display it
            if (quizNames.ContainsKey(quizId.Value))
            {
                SelectedQuizName = quizNames[quizId.Value];
            }
            else
            {
                // Fallback in case the selected quiz is not in our local cache
                SelectedQuizName = "Quiz selected";
            }
        }
        else
        {
            createRoomDto.QuizId = null;
            SelectedQuizName = "No quiz selected";
        }
        StateHasChanged();
    }
}