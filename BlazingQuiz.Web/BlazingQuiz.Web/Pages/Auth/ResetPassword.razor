@page "/auth/reset-password"
@layout EmptyLayout
@using BlazingQuiz.Web.Apis
@inject NavigationManager NavigationManager
@inject IAuthApi AuthApi
@inject IAppState AppState
@inject QuizAuthStateProvider QuizAuthStateProvider

<div class="container">
    <div class="row vh-100">
        <div class="col-sm-4 mx-auto my-auto border shadow-lg">
            <div class="mt-3">
                <h1 class="h3">Reset Password</h1>
                <p class="text-muted">Enter the code and your new password</p>
            </div>

            <hr />
            <EditForm Model="_model" OnValidSubmit="ResetPasswordAsync">
                <DataAnnotationsValidator/>
                <div class="mb-3">
                    <label for="email" class="form-label">Email: </label>
                    <InputText class="form-control" id="email" placeholder="Enter your email" @bind-Value="_model.Email" />
                    <ValidationMessage For="() => _model.Email"/>
                </div>
@*                 <div class="mb-3">
                    <label for="otp" class="form-label">Reset Code: </label>
                    <InputText class="form-control" id="otp" placeholder="Enter the code sent to your email" @bind-Value="_model.Otp" />
                    <ValidationMessage For="() => _model.Otp"/>
                </div> *@
                <div class="mb-3">
                    <label for="newPassword" class="form-label">New Password: </label>
                    <InputText type="password" class="form-control" id="newPassword" @bind-Value="_model.NewPassword" />
                    <ValidationMessage For="() => _model.NewPassword"/>
                </div>
                <div class="mb-3">
                    <label for="confirmNewPassword" class="form-label">Confirm New Password: </label>
                    <InputText type="password" class="form-control" id="confirmNewPassword" @bind-Value="_model.ConfirmNewPassword" />
                    <ValidationMessage For="() => _model.ConfirmNewPassword"/>
                </div>
                @if(_errorMessage != null)
                {
                    <div class="mb-3 bg-danger text-white p-2 rounded">
                        <p class="mb-0">@_errorMessage</p>
                    </div>
                }
                @if(_successMessage != null)
                {
                    <div class="mb-3 bg-success text-white p-2 rounded">
                        <p class="mb-0">@_successMessage</p>
                    </div>
                }
                <div class="mb-3">
                    @if (!_isBusy)
                    {
                        <button type="submit" class="btn btn-primary w-100">Reset Password</button>
                    }
                    else
                    {
                        <button type="button" disabled class="btn btn-secondary w-100">Reseting Password...</button>
                    }
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private ResetPasswordDto _model = new();
    private bool _isBusy;
    private string? _errorMessage;
    private string? _successMessage;
    private string? _emailFromParam;
    private string? _otpFromParam;

    [Parameter]
    public string? Email { get; set; }

    [Parameter]
    public string? Otp { get; set; }

    protected override void OnInitialized()
    {
        if(QuizAuthStateProvider.IsLoggedIn)
        {
            NavigationManager.NavigateTo("/", replace: true);
        }
    }

    protected override void OnParametersSet()
    {
        // Check if email and OTP were passed as query parameters
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("email", out var emailValues))
        {
            _emailFromParam = emailValues.ToString();
            _model.Email = _emailFromParam;
        }
        
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("otp", out var otpValues))
        {
            _otpFromParam = otpValues.ToString();
            _model.Otp = _otpFromParam;
        }
    }
    
    private async Task ResetPasswordAsync()
    {
        _errorMessage = null;
        _successMessage = null;
        _isBusy = true;
        
        if (_model.NewPassword != _model.ConfirmNewPassword)
        {
            _errorMessage = "Passwords do not match.";
            _isBusy = false;
            return;
        }
        
        try
        {
            AppState.ShowLoader("Resetting password...");
            var response = await AuthApi.ResetPasswordAsync(_model);
            
            if (!response.IsSuccess)
            {
                _errorMessage = response.ErrorMessage;
                return;
            }
            
            _successMessage = "Password reset successfully.";
            
            // Wait for 2 seconds before redirecting
            await Task.Delay(2000);
            NavigationManager.NavigateTo("/auth/login", replace: true);
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _isBusy = false;
            AppState.HideLoader();
        }
    }
}