@page "/auth/reset-password"
@layout EmptyLayout
@using BlazingQuiz.Web.Apis
@inject NavigationManager NavigationManager
@inject IAuthApi AuthApi
@inject IAppState AppState
@inject QuizAuthStateProvider QuizAuthStateProvider

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="hanging-container">
                <div class="hanging-content">
                    <h3>Reset Password</h3>
                </div>
                <div class="rope left-rope"></div>
                <div class="rope right-rope"></div>
            </div>
            <div class="card card-3d-raised card-light">
                <div class="card-body">
                    <EditForm Model="_model" OnValidSubmit="ResetPasswordAsync">
                        <DataAnnotationsValidator />
                        <div class="form-container">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input id="email" class="form-control form-control-lg" placeholder="Enter your email" @bind="_model.Email" />
                                <ValidationMessage For="() => _model.Email" class="validation-message" />
                            </div>
                            <div class="mb-3">
                                <label for="newPassword" class="form-label">New Password</label>
                                <input type="password" id="newPassword" class="form-control form-control-lg" @bind="_model.NewPassword" />
                                <ValidationMessage For="() => _model.NewPassword" class="validation-message" />
                            </div>
                            <div class="mb-3">
                                <label for="confirmNewPassword" class="form-label">Confirm New Password</label>
                                <input type="password" id="confirmNewPassword" class="form-control form-control-lg" @bind="_model.ConfirmNewPassword" />
                                <ValidationMessage For="() => _model.ConfirmNewPassword" class="validation-message" />
                            </div>
                            @if(_errorMessage != null)
                            {
                                <div class="alert alert-danger error-message" role="alert">
                                    @_errorMessage
                                </div>
                            }
                            @if(_successMessage != null)
                            {
                                <div class="alert alert-success error-message" role="alert">
                                    @_successMessage
                                </div>
                            }
                        </div>
                        <div class="d-grid gap-2">
                            @if (!_isBusy)
                            {
                                <button type="submit" class="btn btn-3d btn-3d-success">
                                    <span>Reset Password</span>
                                </button>
                            }
                            else
                            {
                                <button type="button" disabled class="btn btn-3d btn-3d-secondary">
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Reseting Password...</span>
                                </button>
                            }
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private ResetPasswordDto _model = new();
    private bool _isBusy;
    private string? _errorMessage;
    private string? _successMessage;
    private string? _emailFromParam;
    private string? _otpFromParam;

    [Parameter]
    public string? Email { get; set; }

    [Parameter]
    public string? Otp { get; set; }

    protected override void OnInitialized()
    {
        if(QuizAuthStateProvider.IsLoggedIn)
        {
            NavigationManager.NavigateTo("/", replace: true);
        }
    }

    protected override void OnParametersSet()
    {
        // Check if email and OTP were passed as query parameters
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("email", out var emailValues))
        {
            _emailFromParam = emailValues.ToString();
            _model.Email = _emailFromParam;
        }
        
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("otp", out var otpValues))
        {
            _otpFromParam = otpValues.ToString();
            _model.Otp = _otpFromParam;
        }
    }
    
    private async Task ResetPasswordAsync()
    {
        _errorMessage = null;
        _successMessage = null;
        _isBusy = true;
        
        if (_model.NewPassword != _model.ConfirmNewPassword)
        {
            _errorMessage = "Passwords do not match.";
            _isBusy = false;
            return;
        }
        
        try
        {
            AppState.ShowLoader("Resetting password...");
            var response = await AuthApi.ResetPasswordAsync(_model);
            
            if (!response.IsSuccess)
            {
                _errorMessage = response.ErrorMessage;
                return;
            }
            
            _successMessage = "Password reset successfully.";
            
            // Wait for 2 seconds before redirecting
            await Task.Delay(2000);
            NavigationManager.NavigateTo("/auth/login", replace: true);
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _isBusy = false;
            AppState.HideLoader();
        }
    }
}