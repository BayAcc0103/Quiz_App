@page "/auth/login"
@layout EmptyLayout
@using BlazingQuiz.Web.Apis
@inject NavigationManager NavigationManager
@inject IAuthApi AuthApi
@inject IAppState AppState
@inject QuizAuthStateProvider QuizAuthStateProvider

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            @if (!_roleSelected)
            {
                <div class="hanging-container">
                    <div class="hanging-content">
                        <h3>Select Role</h3>
                    </div>
                    <div class="rope left-rope"></div>
                    <div class="rope right-rope"></div>
                </div>

                <!-- Role Selection Cards -->
                <div class="role-selection-container">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card card-3d-raised card-light role-card text-center role-teacher" @onclick="() => SelectRole(UserRole.Teacher)">
                                <div class="card-body">
                                    <div class="role-illustration">
                                        <i class="fas fa-chalkboard-teacher"></i>
                                    </div>
                                    <h5 class="card-title mt-2">Teacher</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card card-3d-raised card-light role-card text-center role-student" @onclick="() => SelectRole(UserRole.Student)">
                                <div class="card-body">
                                    <div class="role-illustration">
                                        <i class="fas fa-graduation-cap"></i>
                                    </div>
                                    <h5 class="card-title mt-2">Student</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="hanging-container">
                    <div class="hanging-content">
                        <h3>Login</h3>
                    </div>
                    <div class="rope left-rope"></div>
                    <div class="rope right-rope"></div>
                </div>
                <div class="card card-3d-raised card-light login-card-container">
                    <div class="card-body">
                        <EditForm Model="_model" OnValidSubmit="LoginAsync">
                            <DataAnnotationsValidator />
                            <div class="form-container">
                                <div class="mb-3">
                                    <label for="username" class="form-label">Username</label>
                                    <input id="username" class="form-control form-control-lg" @bind="_model.Username" />
                                    <ValidationMessage For="() => _model.Username" class="validation-message" />
                                </div>
                                <div>
                                    <label for="password" class="form-label">Password</label>
                                    <input id="password" type="password" class="form-control form-control-lg" @bind="_model.Password" />
                                    <ValidationMessage For="() => _model.Password" class="validation-message" />
                                </div>
                                <!-- Hidden role field since we already selected it -->
                                <input type="hidden" @bind="_model.Role" />
                                @if (_errorMessage != null)
                                {
                                    <div class="alert alert-danger error-message" role="alert">
                                        @_errorMessage
                                    </div>
                                }
                            </div>
                            <div class="d-grid gap-2">
                                @if (!_isBusy)
                                {
                                    <div class="d-flex flex-column align-items-center">
                                        <div class="d-flex gap-3 w-100 mb-3">
                                            <button type="submit" class="btn btn-3d btn-3d-success flex-fill">
                                                <span>Ready!</span>
                                            </button>
                                            <button type="button" class="btn btn-3d btn-3d-outline flex-fill" @onclick="GoToHome">Not Ready!</button>
                                        </div>
                                        <a href="auth/register" class="btn btn-3d btn-3d-primary">Register</a>
                                        <a href="auth/forgot-password" class="text-link mt-3">Forgot Password?</a>
                                    </div>
                                }
                                else
                                {
                                    <button type="button" disabled class="btn btn-3d btn-3d-secondary">
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        <span>Logging in...</span>
                                    </button>
                                }
                            </div>
                        </EditForm>
                    </div>
                    <!-- ReadyQuiz Image Container -->
                    <div class="readyquiz-image-container">
                        <img src="/asset/readyquiz.jpg" alt="ReadyQuiz" class="readyquiz-image" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private LoginDto _model = new();
    private bool _isBusy;
    private string? _errorMessage;
    private bool _roleSelected = false;

    protected override void OnInitialized()
    {
        if(QuizAuthStateProvider.IsLoggedIn)
        {
            //NavigationManager.NavigateTo("/", replace: true); // Redirect to home if already logged in
            RedirectToHome(replace: true);
        }
    }

    private void SelectRole(UserRole role)
    {
        _model.Role = role;
        _roleSelected = true;
    }

    private void GoBackToRoleSelection()
    {
        _roleSelected = false;
        _errorMessage = null;
    }

    private void GoToHome()
    {
        NavigationManager.NavigateTo("/", forceLoad: true);
    }

    private async Task LoginAsync()
    {
        _errorMessage = null;
        _isBusy = true;
        try
        {
            AppState.ShowLoader("Logging in...");
            var authResponse = await AuthApi.LoginAsync(_model);
            if (authResponse.HasError)
            {
                _errorMessage = authResponse.ErrorMessage;
                return;
            }
            //Set the token in the local storage
            var loggedInUser = authResponse.User;
            await QuizAuthStateProvider.SetLoginAsync(loggedInUser);
            RedirectToHome();
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _isBusy = false;
            AppState.HideLoader();
        }
    }

    private void RedirectToHome(bool replace = false)
    {
        var redirectTo = QuizAuthStateProvider.User.Role switch
        {
            nameof(UserRole.Student) => "student/home",
            nameof(UserRole.Teacher) => "teacher/home",
            nameof(UserRole.Admin) => "admin/home",
            _ => "/home"
        };

        NavigationManager.NavigateTo(redirectTo, replace);
    }
}