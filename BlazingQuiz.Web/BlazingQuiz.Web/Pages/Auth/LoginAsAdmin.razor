@page "/auth/login-admin"
@layout EmptyLayout
@using BlazingQuiz.Web.Apis
@inject NavigationManager NavigationManager
@inject IAuthApi AuthApi
@inject IAppState AppState
@inject QuizAuthStateProvider QuizAuthStateProvider

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="hanging-container">
                <div class="hanging-content">
                    <h3>Login as Admin</h3>
                </div>
                <div class="rope left-rope"></div>
                <div class="rope right-rope"></div>
            </div>
            <div class="card card-3d-raised card-light">
                <div class="card-body">
                    <EditForm Model="_model" OnValidSubmit="LoginAsync">
                        <DataAnnotationsValidator />
                        <div class="form-container d-flex flex-column align-items-center">
                            <div class="mb-3 w-100" style="max-width: 400px;">
                                <label for="username" class="form-label text-center d-block">Username</label>
                                <input id="username" class="form-control form-control-lg text-center" @bind="_model.Username" />
                                <ValidationMessage For="() => _model.Username" class="validation-message d-block text-center" />
                            </div>
                            <div class="w-100" style="max-width: 400px;">
                                <label for="password" class="form-label text-center d-block">Password</label>
                                <input id="password" type="password" class="form-control form-control-lg text-center" @bind="_model.Password" />
                                <ValidationMessage For="() => _model.Password" class="validation-message d-block text-center" />
                            </div>
                            <!-- Hidden role field set to Admin -->
                            <input type="hidden" @bind="_model.Role" />
                            @if (_errorMessage != null)
                            {
                                <div class="alert alert-danger error-message" role="alert">
                                    @_errorMessage
                                </div>
                            }
                        </div>
                        <div class="d-grid gap-2">
                            @if (!_isBusy)
                            {
                                <div class="d-flex flex-column align-items-center">
                                    <div class="d-flex gap-3 w-100 mb-3">
                                        <button type="submit" class="btn btn-3d btn-3d-success flex-fill">
                                            <span>Login</span>
                                        </button>
                                        <button type="button" class="btn btn-3d btn-3d-outline flex-fill" @onclick="GoBackToMainPage">Back</button>
                                    </div>
                                    <a href="auth/register" class="btn btn-3d btn-3d-primary">Register</a>
                                    <a href="auth/forgot-password" class="mt-3">Forgot Password?</a>
                                </div>
                            }
                            else
                            {
                                <button type="button" disabled class="btn btn-3d btn-3d-secondary">
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Logging in...</span>
                                </button>
                            }
                        </div>
                    </EditForm>
                    <!-- Do Not Enter Image Container -->
                    <div class="donotenter-image-container mt-3">
                        <img src="/asset/donotenter.jpg" alt="Do Not Enter" class="donotenter-image" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginDto _model = new();
    private bool _isBusy;
    private string? _errorMessage;

    protected override void OnInitialized()
    {
        _model.Role = UserRole.Admin; // Pre-select Admin role
        
        if(QuizAuthStateProvider.IsLoggedIn)
        {
            RedirectToHome(replace: true);
        }
    }

    private void GoBackToMainPage()
    {
        NavigationManager.NavigateTo("/", replace: true);
    }

    private async Task LoginAsync()
    {
        _errorMessage = null;
        _isBusy = true;
        try
        {
            AppState.ShowLoader("Logging in as admin...");
            var authResponse = await AuthApi.LoginAsync(_model);
            if (authResponse.HasError)
            {
                _errorMessage = authResponse.ErrorMessage;
                return;
            }
            //Set the token in the local storage
            //Implement Auth State Provider
            var loggedInUser = authResponse.User;
            await QuizAuthStateProvider.SetLoginAsync(loggedInUser);
            RedirectToHome();
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _isBusy = false;
            AppState.HideLoader();
        }
    }

    private void RedirectToHome(bool replace = false)
    {
        var redirectTo = QuizAuthStateProvider.User.Role switch
        {
            nameof(UserRole.Student) => "student/home",
            nameof(UserRole.Teacher) => "teacher/home",
            nameof(UserRole.Admin) => "admin/home",
            _ => "/home"
        };

        NavigationManager.NavigateTo(redirectTo, replace);
    }
}