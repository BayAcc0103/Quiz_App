@page "/auth/forgot-password"
@layout EmptyLayout
@using BlazingQuiz.Web.Apis
@inject NavigationManager NavigationManager
@inject IAuthApi AuthApi
@inject IAppState AppState
@inject QuizAuthStateProvider QuizAuthStateProvider

<div class="container">
    <div class="row vh-100">
        <div class="col-sm-4 mx-auto my-auto border shadow-lg">
            <div class="mt-3">
                <h1 class="h3">Forgot Password</h1>
                <p class="text-muted">Enter your email to receive a reset code</p>
            </div>

            <hr />
            <EditForm Model="_model" OnValidSubmit="SendResetCodeAsync">
                <DataAnnotationsValidator/>
                <div class="mb-3">
                    <label for="email" class="form-label">Email: </label>
                    <InputText class="form-control" id="email" placeholder="Enter your email" @bind-Value="_model.Email" />
                    <ValidationMessage For="() => _model.Email"/>
                </div>
                @if(_errorMessage != null)
                {
                    <div class="mb-3 bg-danger text-white p-2 rounded">
                        <p class="mb-0">@_errorMessage</p>
                    </div>
                }
                @if(_successMessage != null)
                {
                    <div class="mb-3 bg-success text-white p-2 rounded">
                        <p class="mb-0">@_successMessage</p>
                    </div>
                }
                <div class="mb-3 d-flex justify-content-between">
                    @if (!_isBusy)
                    {
                        <a href="auth/login" class="btn btn-outline-secondary">Back to Login</a>
                        <button type="submit" class="btn btn-primary">Send Reset Code</button>
                    }
                    else
                    {
                        <button type="button" disabled class="btn btn-secondary">Sending...</button>
                    }
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private ForgotPasswordDto _model = new();
    private bool _isBusy;
    private string? _errorMessage;
    private string? _successMessage;

    protected override void OnInitialized()
    {
        if(QuizAuthStateProvider.IsLoggedIn)
        {
            NavigationManager.NavigateTo("/", replace: true);
        }
    }
    
    private async Task SendResetCodeAsync()
    {
        _errorMessage = null;
        _successMessage = null;
        _isBusy = true;
        
        try
        {
            AppState.ShowLoader("Sending reset code...");
            var response = await AuthApi.SendResetCodeAsync(_model);
            
            if (!response.IsSuccess)
            {
                _errorMessage = response.ErrorMessage;
                return;
            }
            
            _successMessage = "Reset code sent successfully. Please check your email.";

            // After a short delay, navigate to the OTP verification page
            await Task.Delay(1000);
            NavigationManager.NavigateTo($"/auth/verify-otp?email={Uri.EscapeDataString(_model.Email)}", replace: false);
            return;
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _isBusy = false;
            AppState.HideLoader();
        }
    }
}