@page "/auth/verify-otp"
@layout EmptyLayout
@using BlazingQuiz.Web.Apis
@using BlazingQuiz.Shared.DTOs
@inject NavigationManager NavigationManager
@inject IAuthApi AuthApi
@inject IAppState AppState
@inject QuizAuthStateProvider QuizAuthStateProvider

<div class="container">
    <div class="row vh-100">
        <div class="col-sm-4 mx-auto my-auto border shadow-lg">
            <div class="mt-3">
                <h1 class="h3">Verify OTP</h1>
                <p class="text-muted">Enter the code sent to your email</p>
            </div>

            <hr />
            <EditForm Model="_model" OnValidSubmit="VerifyOtpAsync">
                <DataAnnotationsValidator/>
                <div class="mb-3">
                    <label for="email" class="form-label">Email: </label>
                    <InputText class="form-control" id="email" @bind-Value="_model.Email" readonly />
                </div>
                <div class="mb-3">
                    <label for="otp" class="form-label">OTP Code: </label>
                    <InputText class="form-control" id="otp" placeholder="Enter the 6-digit code" maxlength="6" @bind-Value="_model.Otp" />
                    <ValidationMessage For="() => _model.Otp"/>
                </div>
                @if(_errorMessage != null)
                {
                    <div class="mb-3 bg-danger text-white p-2 rounded">
                        <p class="mb-0">@_errorMessage</p>
                    </div>
                }
                <div class="mb-3 d-flex justify-content-between">
                    @if (!_isBusy)
                    {
                        <a href="auth/forgot-password" class="btn btn-outline-secondary">Back</a>
                        <button type="submit" class="btn btn-primary">Verify Code</button>
                    }
                    else
                    {
                        <button type="button" disabled class="btn btn-secondary">Verifying...</button>
                    }
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private VerifyOtpDto _model = new();
    private bool _isBusy;
    private string? _errorMessage;

    [Parameter]
    public string? Email { get; set; }

    protected override void OnInitialized()
    {
        if(QuizAuthStateProvider.IsLoggedIn)
        {
            NavigationManager.NavigateTo("/", replace: true);
        }

        // Get email from query parameters
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("email", out var emailValues))
        {
            Email = emailValues.ToString();
            _model.Email = Email;
        }
    }

    private async Task VerifyOtpAsync()
    {
        _errorMessage = null;
        _isBusy = true;

        try
        {
            AppState.ShowLoader("Verifying OTP...");

            // Create a DTO that includes email and OTP for verification
            var verifyDto = new VerifyOtpDto
            {
                Email = _model.Email,
                Otp = _model.Otp
            };

            // Call the backend to verify the OTP
            var response = await AuthApi.VerifyOtpAsync(verifyDto);

            if (!response.IsSuccess)
            {
                _errorMessage = response.ErrorMessage;
                return;
            }

            // If OTP is valid, navigate to reset password page
            NavigationManager.NavigateTo($"/auth/reset-password?email={Uri.EscapeDataString(_model.Email)}&otp={Uri.EscapeDataString(_model.Otp)}", replace: false);
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _isBusy = false;
            AppState.HideLoader();
        }
    }
}