@page "/"
@inject NavigationManager Navigation
@layout MainLayout

<div class="d-flex align-items-center justify-content-center min-vh-80 py-5">
    <div class="text-center" style="max-width: 800px;">
        <h1 class="display-3 text-white mb-4">Welcome to Blazing Quiz</h1>
        <p class="lead text-white opacity-75 mb-5">Test your knowledge and improve your skills</p>

        <div class="my-5">
            <button class="btn btn-success btn-lg px-5 py-3" @onclick="NavigateToLogin">
                <i class="fas fa-sign-in-alt me-2"></i>Login
            </button>
        </div>

        <div class="border-top border-light pt-5 mt-5">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="bg-opacity-25 bg-white p-4 rounded-3 mb-3">
                        <i class="fas fa-graduation-cap display-4 text-success d-block mb-3"></i>
                        <h3 class="text-white">For Students</h3>
                        <p class="text-white opacity-75">Take quizzes to test your knowledge and track your progress</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="bg-opacity-25 bg-white p-4 rounded-3 mb-3">
                        <i class="fas fa-chalkboard-teacher display-4 text-success d-block mb-3"></i>
                        <h3 class="text-white">For Teachers</h3>
                        <p class="text-white opacity-75">Create and manage quizzes for your students</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="bg-opacity-25 bg-white p-4 rounded-3 mb-3">
                        <i class="fas fa-cog display-4 text-success d-block mb-3"></i>
                        <h3 class="text-white">For Admins</h3>
                        <p class="text-white opacity-75">Manage users, quizzes, and system settings</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .min-vh-80 {
        min-height: 80vh !important;
    }

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }
</style>

@code {
    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/auth/login");
    }
}