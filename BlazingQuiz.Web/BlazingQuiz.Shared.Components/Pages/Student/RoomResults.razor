@page "/student/room-results"
@using BlazingQuiz.Shared.DTOs
@inject NavigationManager NavigationManager
@inject IRoomApi RoomApi
@inject QuizAuthStateProvider QuizAuthStateProvider

@layout QuizPageLayout

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12">

            <div class="hanging-container">
                <div class="hanging-content">
                    <h3>Room History</h3>
                </div>
                <div class="rope left-rope"></div>
                <div class="rope right-rope"></div>
            </div>
            <div class="card card-3d-raised card-light">
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center mt-5">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p>ƒêang t·∫£i l·ªãch s·ª≠ ph√≤ng...</p>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }
                    else if (_allRoomHistories.Count == 0)
                    {
                        <div class="text-center mt-5">
                            <h4>Ch∆∞a c√≥ l·ªãch s·ª≠ ph√≤ng n√†o</h4>
                            <p class="text-muted">B·∫°n ch∆∞a tham gia b·∫•t k·ª≥ ph√≤ng quiz n√†o</p>
                            <button type="button" class="btn btn-3d btn-3d-primary" @onclick="GoToHome">Tham gia ph√≤ng m·ªõi</button>
                        </div>
                    }
                    else
                    {
                        <table class="table table-striped table-hover table-3d d-md-table">
                            <thead>
                                <tr>
                                    <th>Room</th>
                                    <th>Quiz</th>
                                    <th class="d-none d-md-table-cell">Rank</th>
                                    <th class="d-md-table-cell">Total</th>
                                    <th class="d-none d-md-table-cell">Time</th>
                                    <th class="d-md-table-cell">Date</th>
                                    <th class="d-md-table-cell"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (_currentPageRoomHistories.Any())
                                {
                                    @foreach (var history in _currentPageRoomHistories)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <strong>@history.RoomName</strong>
                                                    <small class="text-muted">M√£: @history.RoomCode</small>
                                                </div>
                                            </td>
                                            <td>@history.QuizName</td>
                                            <td class="d-none d-md-table-cell">
                                                <span class="badge badge-room-rank @(history.Rank <= 3 ? "bg-warning text-dark" : "bg-secondary")">@history.Rank</span>
                                                @if (history.Rank == 1)
                                                {
                                                    <span class="ms-1">ü•á</span>
                                                }
                                                else if (history.Rank == 2)
                                                {
                                                    <span class="ms-1">ü•à</span>
                                                }
                                                else if (history.Rank == 3)
                                                {
                                                    <span class="ms-1">ü•â</span>
                                                }
                                            </td>
                                            <td>
                                                <strong>@history.CorrectAnswers</strong>
                                            </td>
                                            <td class="d-none d-md-table-cell">
                                                @if (history.CompletionTime.HasValue)
                                                {
                                                    @history.CompletionTime.Value.ToString(@"mm\:ss")
                                                }
                                                else
                                                {
                                                    <em>Kh√¥ng c√≥</em>
                                                }
                                            </td>
                                            <td class="d-md-table-cell">
                                                @history.CompletedOn?.ToString("dd/MM/yyyy HH:mm")
                                            </td>
                                            <td class="d-md-table-cell">
                                                <button type="button" class="btn btn-3d btn-3d-primary btn-xs" @onclick="() => ViewLeaderboard(history.RoomId, history.QuizId)">
                                                    <span class="material-symbols-outlined">
                                                        leaderboard
                                                    </span>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">Kh√¥ng t√¨m th·∫•y l·ªãch s·ª≠ ph√≤ng</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <!-- Pagination -->
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">

                                <!-- Previous -->
                                <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                                    <button class="page-link"
                                            disabled="@(CurrentPage == 1)"
                                            @onclick="() => NavigateToPage(CurrentPage - 1)">
                                        <span class="material-symbols-outlined">
                                            chevron_left
                                        </span>
                                    </button>
                                </li>

                                @if (TotalPages <= 5) // Show fewer pages on mobile
                                {
                                    @for (int i = 1; i <= TotalPages; i++)
                                    {
                                        var pageNumber = i;

                                        <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                            <button class="page-link"
                                                    @onclick="() => NavigateToPage(pageNumber)"
                                                    title="Go to page @pageNumber">
                                                @pageNumber
                                            </button>
                                        </li>
                                    }
                                }
                                else
                                {
                                    @if (CurrentPage <= 3)
                                    {
                                        @for (int i = 1; i <= 4; i++)
                                        {
                                            var pageNumber = i;

                                            <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                                <button class="page-link"
                                                        @onclick="() => NavigateToPage(pageNumber)"
                                                        title="Go to page @pageNumber">
                                                    @pageNumber
                                                </button>
                                            </li>
                                        }

                                        <li class="page-item disabled d-none d-md-block">
                                            <span class="page-link">...</span>
                                        </li>
                                        <li class="page-item d-md-none">
                                            <span class="page-link">‚Ä¶</span>
                                        </li>

                                        <li class="page-item">
                                            <button class="page-link"
                                                    @onclick="() => NavigateToPage(TotalPages)"
                                                    title="Go to page @TotalPages">
                                                @TotalPages
                                            </button>
                                        </li>
                                    }
                                    else if (CurrentPage >= TotalPages - 2)
                                    {
                                        <li class="page-item">
                                            <button class="page-link"
                                                    @onclick="() => NavigateToPage(1)"
                                                    title="Go to page 1">
                                                1
                                            </button>
                                        </li>

                                        <li class="page-item disabled d-none d-md-block">
                                            <span class="page-link">...</span>
                                        </li>
                                        <li class="page-item d-md-none">
                                            <span class="page-link">‚Ä¶</span>
                                        </li>

                                        @for (int i = TotalPages - 3; i <= TotalPages; i++)
                                        {
                                            var pageNumber = i;

                                            <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                                <button class="page-link"
                                                        @onclick="() => NavigateToPage(pageNumber)"
                                                        title="Go to page @pageNumber">
                                                    @pageNumber
                                                </button>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li class="page-item">
                                            <button class="page-link"
                                                    @onclick="() => NavigateToPage(1)"
                                                    title="Go to page 1">
                                                1
                                            </button>
                                        </li>

                                        <li class="page-item disabled d-none d-md-block">
                                            <span class="page-link">...</span>
                                        </li>
                                        <li class="page-item d-md-none">
                                            <span class="page-link">‚Ä¶</span>
                                        </li>

                                        @for (int i = CurrentPage - 1; i <= CurrentPage + 1; i++)
                                        {
                                            var pageNumber = i;

                                            <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                                                <button class="page-link"
                                                        @onclick="() => NavigateToPage(pageNumber)"
                                                        title="Go to page @pageNumber">
                                                    @pageNumber
                                                </button>
                                            </li>
                                        }

                                        <li class="page-item disabled d-none d-md-block">
                                            <span class="page-link">...</span>
                                        </li>
                                        <li class="page-item d-md-none">
                                            <span class="page-link">‚Ä¶</span>
                                        </li>

                                        <li class="page-item">
                                            <button class="page-link"
                                                    @onclick="() => NavigateToPage(TotalPages)"
                                                    title="Go to page @TotalPages">
                                                @TotalPages
                                            </button>
                                        </li>
                                    }
                                }

                                <!-- Next -->
                                <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                                    <button class="page-link"
                                            disabled="@(CurrentPage == TotalPages)"
                                            @onclick="() => NavigateToPage(CurrentPage + 1)">
                                        <span class="material-symbols-outlined">
                                            chevron_right
                                        </span>
                                    </button>
                                </li>

                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private const int PageSize = 10;

    private bool isLoading = true;
    private string? errorMessage;
    private List<RoomHistoryDto> _allRoomHistories = new();
    private List<RoomHistoryDto> _currentPageRoomHistories = new();

    private int CurrentPage = 1;
    private int TotalPages;
    private int TotalCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadRoomHistoriesAsync();
    }

    private async Task LoadRoomHistoriesAsync()
    {
        try
        {
            var response = await RoomApi.GetRoomHistoryAsync();
            if (response != null)
            {
                _allRoomHistories = response.ToList();
                TotalCount = _allRoomHistories.Count;
                TotalPages = (int)Math.Ceiling(TotalCount / (double)PageSize);

                await NavigateToPage(1);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"L·ªói khi t·∫£i l·ªãch s·ª≠ ph√≤ng: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private Task NavigateToPage(int page)
    {
        if (page < 1 || page > TotalPages)
            return Task.CompletedTask;

        CurrentPage = page;

        _currentPageRoomHistories = _allRoomHistories
            .Skip((page - 1) * PageSize)
            .Take(PageSize)
            .ToList();

        return Task.CompletedTask;
    }

    private void GoToHome()
    {
        NavigationManager.NavigateTo("/student/home");
    }

    private void ViewLeaderboard(Guid roomId, Guid quizId)
    {
        NavigationManager.NavigateTo($"/student/quiz/{quizId}/room/{roomId}/leaderboard");
    }
}