@page "/student/quiz-type-selection"
@using BlazingQuiz.Shared.Components.Apis
@inject NavigationManager NavigationManager
@inject QuizState QuizState
@inject IStudentQuizApi StudentQuizApi
@inject IAppState AppState

@if (QuizState.Quiz != null)
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h2 class="text-center mb-4">Select Quiz Type</h2>
                <p class="text-center mb-5">Choose how you'd like to take the quiz:</p>
                
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="quiz-type-card h-100 p-4 border rounded text-center" style="cursor: pointer;" @onclick="() => StartQuiz(QuestionType.MCQ)">
                            <div class="quiz-type-icon mb-3">
                                <i class="bi bi-list-check" style="font-size: 3rem; color: #3498db;"></i>
                            </div>
                            <h4>Multiple Choice Questions</h4>
                            <p class="mt-3">Answer questions with options, save and go to next, or submit the quiz when complete.</p>
                            <button class="btn btn-primary mt-3">Start MCQ Quiz</button>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-4">
                        <div class="quiz-type-card h-100 p-4 border rounded text-center" style="cursor: pointer;" @onclick="() => StartQuiz(QuestionType.Flashcard)">
                            <div class="quiz-type-icon mb-3">
                                <i class="bi bi-card-text" style="font-size: 3rem; color: #2ecc71;"></i>
                            </div>
                            <h4>Flashcards</h4>
                            <p class="mt-3">Review questions and answers by flipping cards. Navigate through questions at your own pace.</p>
                            <button class="btn btn-success mt-3">Start Flashcard Quiz</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center mt-5">
        <h3>No Quiz Selected</h3>
        <p>You must start a quiz first from the 'My Quizzes' page.</p>
        <div class="mt-4">
            <a href="/student/home" class="btn btn-primary me-2">Go to Home</a>
            <a href="/student/my-quizes" class="btn btn-secondary">My Quizzes</a>
        </div>
    </div>
}

<style>
    .quiz-type-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .quiz-type-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    
    .quiz-type-icon {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

@code {
    private enum QuestionType { MCQ, Flashcard }

    private async Task StartQuiz(QuestionType type)
    {
        if (QuizState.Quiz == null || QuizState.StudentQuizId == 0)
        {
            NavigationManager.NavigateTo("student/home", replace: true);
            return;
        }

        switch (type)
        {
            case QuestionType.MCQ:
                NavigationManager.NavigateTo("/student/quiz", forceLoad: true); // Using forceLoad to ensure the page refreshes properly
                break;
            case QuestionType.Flashcard:
                NavigationManager.NavigateTo("/student/flashcard-quiz", forceLoad: true);
                break;
        }
    }
}