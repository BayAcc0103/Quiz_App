@page "/student/home"

@inject IAppState AppState  
@inject ICategoryApi CategoryApi
@inject IStudentQuizApi StudentQuizApi
@inject NavigationManager NavigationManager
@inject QuizState QuizState

<div class="container">
    <div class="row">
        <div class="col-sm-3 ms-auto mb-sm-0">
            <label class="form-label">Select Category</label>
            <select class="form-control" @bind="_selectedCategoryId" @bind:after="OnSelectedCategoryChanged">
                <option value="0">Select Category</option>
                @foreach (var category in _categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="row">
        @if(!_isLoading && _quizes.Length == 0)
        {
            var message = _selectedCategoryId == 0 ? "Select a category to view quizes." : "No quizes available for this category.";
            <div class="col-sm-12 text-center">
                <h5 class="text-danger">@message</h5>
            </div>
        }
        else
        {
            @foreach (var q in _quizes)
            {
                <div class="col-sm-4">
                    <div class="box bg-white p-3">
                        <h5 class="fw-bold">@q.Name</h5>
                        <hr />
                        <table class="table">
                            <tr>
                                <td>
                                    <label class="fw-bold">Category</label>
                                </td>
                                <td>
                                    <span>@q.CategoryName</span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label class="fw-bold">Created By</label>
                                </td>
                                <td>
                                    <span>@q.CreatedByName</span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label class="fw-bold">Number of Questions</label>
                                </td>
                                <td>
                                    <span>@q.TotalQuestions question(s)</span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label class="fw-bold">Total Time</label>
                                </td>
                                <td>
                                    <span>@q.TimeInMinutes minute(s)</span>
                                </td>
                            </tr>
                        </table>
                        <hr />
                        <button type="button" class="btn btn-sm btn-warning" @onclick="() => ShowQuizTypeSelection(q)">Start Quiz</button>
                    </div>
                </div>
            }
        }    
    </div>
</div>

@if(_selectedQuizForType != null)
{
    <Modal Title="Select Quiz Type" OnCancelClick="() => _selectedQuizForType = null" OnActionButtonClick="() => {}" ActionButtonText="Close">
        <div class="quiz-type-selection">
            <div class="d-grid gap-3">
                <button class="btn btn-lg btn-outline-primary p-3" @onclick="() => StartQuizWithMode(QuestionType.MCQ)">
                    <h5><i class="bi bi-list-check me-2"></i>Multiple Choice Questions</h5>
                    <p class="mb-0">Answer questions with options, save and go to next, or submit the quiz when complete.</p>
                </button>
                <button class="btn btn-lg btn-outline-success p-3" @onclick="() => StartQuizWithMode(QuestionType.Flashcard)">
                    <h5><i class="bi bi-card-text me-2"></i>Flashcards</h5>
                    <p class="mb-0">Review questions and answers by flipping cards. Navigate through questions at your own pace.</p>
                </button>
            </div>
        </div>
    </Modal>
}

@code {
    private CategoryDto[] _categories = [];
    private QuizListDto[] _quizes = [];
    private int _selectedCategoryId;
    private bool _isLoading;
    private QuizListDto? _selectedQuizForType;

    private enum QuestionType { MCQ, Flashcard }
    protected override async Task OnInitializedAsync()
    {
        AppState.ShowLoader("Loading categories and quizes...");
        try
        {
            _isLoading = true;
            var categoriesTask = CategoryApi.GetCategoriesAsync();
            //Load/Fetch quizes
            _quizes = await StudentQuizApi.GetActiveQuizesAsync(_selectedCategoryId);
            _categories = await categoriesTask;
        }
        catch (Exception ex)
        {
            AppState.ShowError(ex.Message);
        }
        finally
        {
            AppState.HideLoader();
            _isLoading = false;
        }
    }
    private async Task OnSelectedCategoryChanged()
    {
        AppState.ShowLoader("Loading quizes...");
        _quizes = await StudentQuizApi.GetActiveQuizesAsync(_selectedCategoryId);
        AppState.HideLoader();
    }

    private void ShowQuizTypeSelection(QuizListDto quiz)
    {
        _selectedQuizForType = quiz;
    }

    private async Task StartQuizWithMode(QuestionType type)
    {
        if (_selectedQuizForType == null) return;
        
        AppState.ShowLoader("Preparing the quiz...");
        try
        {
            QuizApiResponse<int> response = await StudentQuizApi.StartQuizAsync(_selectedQuizForType.Id);
            if (!response.IsSuccess)
            {
                //Show error alert
                return;
            }
            int studentQuizId = response.Data;

            QuizState.StartQuiz(_selectedQuizForType, studentQuizId);
            
            // Navigate to appropriate quiz type based on selection
            switch (type)
            {
                case QuestionType.MCQ:
                    NavigationManager.NavigateTo("student/quiz");
                    break;
                case QuestionType.Flashcard:
                    NavigationManager.NavigateTo("student/flashcard-quiz");
                    break;
            }
        }
        catch (Exception ex)
        {
            AppState.ShowError(ex.Message);
        }
        finally
        {
            AppState.HideLoader();
            _selectedQuizForType = null;
        }
    }
}
