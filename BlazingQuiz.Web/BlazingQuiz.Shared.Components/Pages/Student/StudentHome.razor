<div class="student-home-background">
    <div class="container-fluid px-0">
        <!-- Category Section for Visible Categories -->
        <div class="mb-3 category-section px-2">
            <div class="card card-3d-raised card-light">
                <div class="card-body">
                    @if (_visibleCategories.Length > 0)
                    {
                        <!-- First row: 4 categories -->
                        <div class="row mb-2">
                            @{
                                var displayedCategories = 0;
                                var maxFirstRow = Math.Min(4, _visibleCategories.Length);
                                for (int i = 0; i < maxFirstRow; i++)
                                {
                                    var category = _visibleCategories[i];
                                    <div class="col-3 col-sm-3 col-md-3 col-lg-2">
                                        <div @onclick="() => OnCategoryClick(category)" class="category-item">
                                            <div class="d-flex flex-column align-items-center justify-content-center text-center">
                                                @if (!string.IsNullOrEmpty(category.ImagePath))
                                                {
                                                    <img src="@CategoryImageService.GetImageUrl(category.ImagePath)" alt="@category.Name" class="category-image img-fluid rounded mb-2" />
                                                }
                                                else
                                                {
                                                    <div class="category-placeholder rounded mb-2 d-flex align-items-center justify-content-center">
                                                        <i class="bi bi-folder fs-3 text-muted"></i>
                                                    </div>
                                                }
                                                <div class="category-name">@category.Name</div>
                                            </div>
                                        </div>
                                    </div>
                                    displayedCategories++;
                                }
                            }
                        </div>

                        <!-- Second row: up to 3 categories + expand button -->
                        var remainingCategories = _visibleCategories.Length - displayedCategories;
                        var showExpandButton = remainingCategories > 0 && !_categoriesExpanded;

                        <div class="row">
                            @for (int i = displayedCategories; i < Math.Min(displayedCategories + 3, _visibleCategories.Length); i++)
                            {
                                var category = _visibleCategories[i];
                                <div class="col-4 col-sm-4 col-md-4 col-lg-2">
                                    <div @onclick="() => OnCategoryClick(category)" class="category-item">
                                        <div class="d-flex flex-column align-items-center justify-content-center text-center">
                                            @if (!string.IsNullOrEmpty(category.ImagePath))
                                            {
                                                <img src="@CategoryImageService.GetImageUrl(category.ImagePath)" alt="@category.Name" class="category-image img-fluid rounded mb-2" />
                                            }
                                            else
                                            {
                                                <div class="category-placeholder rounded mb-2 d-flex align-items-center justify-content-center">
                                                    <i class="bi bi-folder fs-3 text-muted"></i>
                                                </div>
                                            }
                                            <div class="category-name">@category.Name</div>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (showExpandButton)
                            {
                                <div class="col-4 col-sm-4 col-md-4 col-lg-2">
                                    <div class="toggle-button text-center d-flex flex-column justify-content-center align-items-center" @onclick="ToggleCategoryContainer">
                                        <svg class="google-arrow-icon" style="width: 24px; height: 24px; color: #495057;" viewBox="0 0 24 24">
                                            <path fill="currentColor" d="M16.59 8.59L12 13.17 7.41 8.59 6 10l6 6 6-6z" />
                                        </svg>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Additional categories container that starts hidden -->
                        <div id="additional-categories"
                             class="additional-categories-container mt-2"
                             style="@( _categoriesExpanded ? "" : "display: none;")">
                            <!-- Row 3 -->
                            @if (_categoriesExpanded && displayedCategories + 3 < _visibleCategories.Length)
                            {
                                <div class="row mb-2">
                                    @for (int i = displayedCategories + 3; i < Math.Min(displayedCategories + 6, _visibleCategories.Length); i++)
                                    {
                                        var category = _visibleCategories[i];
                                        <div class="col-4 col-sm-4 col-md-4 col-lg-2">
                                            <div @onclick="() => OnCategoryClick(category)" class="category-item">
                                                <div class="d-flex flex-column align-items-center justify-content-center text-center">
