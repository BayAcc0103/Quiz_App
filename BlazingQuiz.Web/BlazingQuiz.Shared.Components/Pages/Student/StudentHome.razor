<div class="container">
    <!-- Hero Section -->
    <div class="hero-card">
        <h4 class="mb-3">Welcome to the Quiz Platform, Student!</h4>
        <p class="mb-0">Select a category to start exploring quizzes or browse all available quizzes below.</p>
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-md-4 ms-auto">
            <label class="form-label">Select Category</label>
            <select class="form-select" @bind="_selectedCategoryId" @bind:after="OnSelectedCategoryChanged">
                <option value="0">All Categories</option>
                @foreach (var category in _categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
    </div>

    <!-- Category Cards Section -->
    @if (_categories.Length > 0 && _selectedCategoryId == 0)
    {
        <div class="row mb-4">
            @foreach (var category in _categories)
            {
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card category-card h-100" style="cursor: pointer;" @onclick="() => SelectCategory(category.Id)">
                        <div class="card-body text-center">
                            <div class="category-icon mb-3">
                                <i class="bi bi-folder text-primary" style="font-size: 2.5rem;"></i>
                            </div>
                            <h5 class="card-title">@category.Name</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Quiz List Section -->
    <div class="row">
        @if(!_isLoading && _quizes.Length == 0)
        {
            var message = _selectedCategoryId == 0 ? "Select a category to view quizzes or browse all categories." : "No quizzes available for this category.";
            <div class="col-12 text-center">
                <h5 class="text-muted">@message</h5>
            </div>
        }
        else
        {
            @foreach (var q in _quizes)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card h-100 quiz-card">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">@q.Name</h5>
                                @* Bookmark functionality can be added here *@
                            </div>
                            
                            <div class="quiz-details mb-3">
                                <div class="d-flex flex-wrap gap-2 mb-2">
                                    <span class="badge bg-secondary">@q.CategoryName</span>
                                    <span class="badge bg-info">@q.TotalQuestions questions</span>
                                    <span class="badge bg-warning text-dark">@q.TimeInMinutes min</span>
                                </div>
                                
                                <p class="small text-muted mb-1">
                                    <i class="bi bi-person me-1"></i>Created by: @q.CreatedByName
                                </p>
                                
                                <div class="mt-2">
                                    <p class="card-text mb-0"><strong>Instructions:</strong> Complete all questions in the allotted time.</p>
                                </div>
                            </div>
                            
                            <div class="mt-auto">
                                <button type="button" class="btn btn-primary w-100" @onclick="() => ShowQuizTypeSelection(q)">Start Quiz</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@if(_selectedQuizForType != null)
{
    <Modal Title="Select Quiz Type" OnCancelClick="() => _selectedQuizForType = null" OnActionButtonClick="() => {}" ActionButtonText="Close">
        <div class="quiz-type-selection">
            <div class="d-grid gap-3">
                <button class="btn btn-lg btn-outline-primary p-3" @onclick="() => StartQuizWithMode(QuestionType.MCQ)">
                    <h5><i class="bi bi-list-check me-2"></i>Multiple Choice Questions</h5>
                    <p class="mb-0">Answer questions with options, save and go to next, or submit the quiz when complete.</p>
                </button>
                <button class="btn btn-lg btn-outline-success p-3" @onclick="() => StartQuizWithMode(QuestionType.Flashcard)">
                    <h5><i class="bi bi-card-text me-2"></i>Flashcards</h5>
                    <p class="mb-0">Review questions and answers by flipping cards. Navigate through questions at your own pace.</p>
                </button>
            </div>
        </div>
    </Modal>
}

@code {
    private CategoryDto[] _categories = [];
    private QuizListDto[] _quizes = [];
    private int _selectedCategoryId;
    private bool _isLoading;
    private QuizListDto? _selectedQuizForType;

    private enum QuestionType { MCQ, Flashcard }
    
    protected override async Task OnInitializedAsync()
    {
        AppState.ShowLoader("Loading categories and quizzes...");
        try
        {
            _isLoading = true;
            var categoriesTask = CategoryApi.GetCategoriesAsync();
            //Load/Fetch quizzes
            _quizes = await StudentQuizApi.GetActiveQuizesAsync(_selectedCategoryId);
            _categories = await categoriesTask;
        }
        catch (Exception ex)
        {
            AppState.ShowError(ex.Message);
        }
        finally
        {
            AppState.HideLoader();
            _isLoading = false;
        }
    }
    
    private async Task OnSelectedCategoryChanged()
    {
        AppState.ShowLoader("Loading quizzes...");
        _quizes = await StudentQuizApi.GetActiveQuizesAsync(_selectedCategoryId);
        AppState.HideLoader();
    }

    private void SelectCategory(int categoryId)
    {
        _selectedCategoryId = categoryId;
        OnSelectedCategoryChanged();
    }

    private void ShowQuizTypeSelection(QuizListDto quiz)
    {
        _selectedQuizForType = quiz;
    }

    private async Task StartQuizWithMode(QuestionType type)
    {
        if (_selectedQuizForType == null) return;

        AppState.ShowLoader("Preparing the quiz...");
        try
        {
            QuizApiResponse<int> response = await StudentQuizApi.StartQuizAsync(_selectedQuizForType.Id);
            if (!response.IsSuccess)
            {
                //Show error alert
                return;
            }
            int studentQuizId = response.Data;

            QuizState.StartQuiz(_selectedQuizForType, studentQuizId);

            // Navigate to appropriate quiz type based on selection
            switch (type)
            {
                case QuestionType.MCQ:
                    NavigationManager.NavigateTo("student/quiz");
                    break;
                case QuestionType.Flashcard:
                    NavigationManager.NavigateTo("student/flashcard-quiz");
                    break;
            }
        }
        catch (Exception ex)
        {
            AppState.ShowError(ex.Message);
        }
        finally
        {
            AppState.HideLoader();
            _selectedQuizForType = null;
        }
    }
}