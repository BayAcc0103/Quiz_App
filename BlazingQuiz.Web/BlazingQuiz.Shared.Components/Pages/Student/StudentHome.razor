                                @if (_quizDetails.AverageRating.HasValue && _quizDetails.AverageRating > 0)
                                {
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Math.Floor(_quizDetails.AverageRating.Value))
                                        {
                                            <span class="material-symbols-outlined text-warning">star</span>
                                        }
                                        else if (i - 0.5 <= _quizDetails.AverageRating.Value)
                                        {
                                            <span class="material-symbols-outlined text-warning">star_half</span>
                                        }
                                        else
                                        {
                                            <span class="material-symbols-outlined text-muted">star_outline</span>
                                        }
                                    }
                                }
                                else
                                {
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <span class="material-symbols-outlined text-muted">star_outline</span>
                                    }
                                }
                            </div>
                            @if (_quizDetails.AverageRating.HasValue)
                            {
                                <span class="fs-5 fw-bold">@(_quizDetails.AverageRating.Value.ToString("F1"))</span>
                            }
                            else
                            {
                                <span class="fs-5 fw-bold text-muted">0.0</span>
                            }
                        </div>
                    </div>

                    @if (_quizDetails.RecentRatings.Any())
                    {
                        <div class="recent-feedback mt-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6>Recent Ratings</h6>
                                <button type="button" class="btn btn-sm btn-outline-primary" @onclick="() => ShowAllFeedback(_quizDetails.Id)">View All Feedback</button>
                            </div>
                            @{
                                // Sort ratings by date and take top 3
                                var sortedRatings = _quizDetails.RecentRatings
                                    .OrderByDescending(f => f.CreatedOn)
                                    .Take(3)
                                    .ToList();
                            }

                            <div class="feedback-list">
                                @foreach (var rating in sortedRatings)
                                {
                                    <div class="feedback-item p-3 mb-2 border rounded">
                                        <div class="d-flex justify-content-between mb-1">
                                            <strong>@rating.StudentName</strong>
                                            @if (!string.IsNullOrEmpty(rating.Score))
                                            {
                                                <span class="badge bg-primary">@GetRatingIcon(rating.Score) @GetRatingDisplayText(rating.Score)</span>
                                            }
                                        </div>
                                        <small class="text-muted">@rating.CreatedOn.ToString("MMM dd, yyyy HH:mm")</small>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else if (_loadingDetails)
        {
            <div class="text-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </BottomSheet>

    <BottomSheet IsOpen="@_showAllFeedback" Title="All Feedback" IsOpenChanged="OnAllFeedbackBottomSheetVisibilityChanged" OnCancelClick="() => _showAllFeedback = false" ShowFooter="false">
        @if (_allFeedback != null)
        {
            <div class="quiz-details-content" style="max-height: 60vh; overflow-y: auto;">
                @if (_allFeedback.CombinedFeedback.Any())
                {
                    <div class="feedback-list">
                        @foreach (var feedback in _allFeedback.CombinedFeedback)
                        {
                            <div class="feedback-item p-3 mb-3 border rounded">
                                <div class="d-flex justify-content-between mb-2">
                                    <strong>@feedback.StudentName</strong>
                                    @if (!string.IsNullOrEmpty(feedback.Score))
                                    {
                                        <span class="badge bg-primary">@GetRatingIcon(feedback.Score) @GetRatingDisplayText(feedback.Score)</span>
                                    }
                                </div>
                                <small class="text-muted">@feedback.CreatedOn.ToString("MMM dd, yyyy HH:mm")</small>

                                @if (!string.IsNullOrEmpty(feedback.Comment))
                                {
                                    <div class="mt-2">
                                        <p class="mb-0">@feedback.Comment</p>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-3">
                        <p class="text-muted mb-0">No feedback yet for this quiz</p>
                    </div>
                }
            </div>
        }
        else if (_loadingAllFeedback)
        {
            <div class="text-center py-3">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </BottomSheet>
</div>

<script>
    // No JavaScript needed for the new approach since we're using simple show/hide
</script>

@code {
    private CategoryDto[] _categories = [];
    private CategoryDto[] _visibleCategories = [];
    private QuizListDto[] _quizes = [];
    private QuizListDto[] _randomEasyQuizzes = [];
    private QuizListDto[] _randomHardQuizzes = [];
    private QuizListDto[] _recentQuizzes = [];
    private QuizListDto[] _bestRatedQuizzes = [];
    private int _selectedCategoryId;
    private bool _isLoading;
    private QuizListDto? _selectedQuizForType;
    private Dictionary<Guid, bool> _bookmarkedQuizes = new();

    // Search fields
    private string _searchTerm = string.Empty;
    private string SearchTerm
    {
        get => _searchTerm;
        set
        {
            _searchTerm = value;
            UpdateSearchResults();
        }
    }
    private QuizListDto[]? _filteredQuizzes;

    // For quiz details modal
    private bool _showQuizDetails = false;
    private QuizDetailsDto? _quizDetails;
    private bool _loadingDetails = false;

    // For all feedback modal
    private bool _showAllFeedback = false;
    private QuizAllFeedbackDto? _allFeedback;
    private bool _loadingAllFeedback = false;

    [Parameter] public int? categoryId { get; set; }
    private enum QuestionType { MCQ, Flashcard }
    private bool _categoriesExpanded = false;

    protected override async Task OnInitializedAsync()
    {
        AppState.ShowLoader("Loading categories and quizes...");
        try
        {
            _isLoading = true;
            var categoriesTask = CategoryApi.GetCategoriesAsync();
            //Load/Fetch quizes
            // Use the categoryId from the route parameter if provided, otherwise default to 0 (all categories)
            _selectedCategoryId = categoryId ?? 0;
            _quizes = await StudentQuizApi.GetActiveQuizesAsync(_selectedCategoryId);
            _categories = await categoriesTask;

            // Filter visible categories (where IsDisplay is true)
            _visibleCategories = _categories.Where(c => c.IsDisplay).ToArray();

            // Load random easy quizzes for the slider
            await LoadRandomEasyQuizzesAsync();
            // Load random hard quizzes for the slider
            await LoadRandomHardQuizzesAsync();
            // Load recent quizzes for the slider
            await LoadRecentQuizzesAsync();
            // Load best rated quizzes for the slider
            await LoadBestRatedQuizzesAsync();

            // Load bookmark status for each quiz
            await LoadBookmarkStatusAsync();
        }
        catch (Exception ex)
        {
            throw;
        }
        finally
        {
            AppState.HideLoader();
            _isLoading = false;
        }
    }

    private async Task ExpandCategories()
    {
        _categoriesExpanded = true;
        StateHasChanged(); // Trigger re-render to update the UI state

        // Execute JavaScript to handle the animation
        await JSRuntime.InvokeVoidAsync("expandCategories");
    }

    private async Task CollapseCategories()
    {
        _categoriesExpanded = false;
        StateHasChanged(); // Trigger re-render to update the UI state

        // Execute JavaScript to handle the animation
        await JSRuntime.InvokeVoidAsync("collapseCategories");
    }

    private async Task ToggleCategoryContainer()
    {
        _categoriesExpanded = !_categoriesExpanded;
        StateHasChanged(); // Trigger re-render to update the UI state
    }


    private async Task OnSelectedCategoryChanged()
    {
        if (_selectedCategoryId == 0)
        {
            // If "All Categories" is selected, reload the home page with no category filter
            NavigationManager.NavigateTo("/student/home");
        }
        else
        {
            // Navigate to the new filter by category page
            NavigationManager.NavigateTo($"/student/filter-by-category/{_selectedCategoryId}");
        }
    }

    private async Task OnCategoryClick(CategoryDto category)
    {
        // Navigate to the new filter by category page
        NavigationManager.NavigateTo($"/student/filter-by-category/{category.Id}");
    }

    // Removed old StartQuizAsync method - replaced with new quiz type selection functionality

    private string GetRatingIcon(string? rating)
    {
        if (string.IsNullOrEmpty(rating)) return "ðŸ˜";

        return rating?.ToLower().Trim() switch
        {
            "very bad" => "ðŸ˜ž",
            "bad" => "ðŸ˜Ÿ",
            "normal" => "ðŸ˜",
            "good" => "ðŸ˜„",
            "very good" => "ðŸ˜",
            _ => "ðŸ˜" // Default to neutral face for unknown ratings
        };
    }

    private string GetRatingDisplayText(string? rating)
    {
        if (string.IsNullOrEmpty(rating)) return "";

        return rating?.ToLower().Trim() switch
        {
            "very bad" => "Very Bad",
            "bad" => "Bad",
            "normal" => "Normal",
            "good" => "Good",
            "very good" => "Very Good",
            _ => rating ?? "" // Default to original value for unknown ratings
        };
    }

    private async Task LoadBookmarkStatusAsync()
    {
        if (!QuizAuthStateProvider.IsLoggedIn)
        {
            return;
        }

        _bookmarkedQuizes.Clear();
        foreach (var quiz in _quizes)
        {
            var result = await BookmarkApi.IsBookmarkedAsync(QuizAuthStateProvider.User.Id, quiz.Id);
            if (result.IsSuccess)
            {
                _bookmarkedQuizes[quiz.Id] = result.Data;
            }
        }
    }

    private async Task ToggleBookmarkAsync(QuizListDto quiz)
    {
        if (!QuizAuthStateProvider.IsLoggedIn)
        {
            NavigationManager.NavigateTo("auth/login");
            return;
        }

        var isBookmarked = _bookmarkedQuizes.ContainsKey(quiz.Id) && _bookmarkedQuizes[quiz.Id];

        if (isBookmarked)
        {
            // Remove bookmark
            var result = await BookmarkApi.RemoveBookmarkAsync(QuizAuthStateProvider.User.Id, quiz.Id);
            if (result.IsSuccess)
            {
                _bookmarkedQuizes[quiz.Id] = false;
            }
        }
        else
        {
            // Add bookmark
            var bookmarkDto = new QuizBookmarkDto
                {
                    UserId = QuizAuthStateProvider.User.Id,
                    QuizId = quiz.Id,
                    QuizName = quiz.Name,
                    CategoryName = quiz.CategoryName
                };

            var result = await BookmarkApi.AddBookmarkAsync(bookmarkDto);
            if (result.IsSuccess)
            {
                _bookmarkedQuizes[quiz.Id] = true;
            }
        }
    }

    private async Task OnBookmarkToggled(QuizListDto quiz)
    {
        // Refresh bookmark status when bookmark is toggled in the slider
        var result = await BookmarkApi.IsBookmarkedAsync(QuizAuthStateProvider.User.Id, quiz.Id);
        if (result.IsSuccess)
        {
            _bookmarkedQuizes[quiz.Id] = result.Data;
        }
    }

    private bool IsBookmarked(Guid quizId)
    {
        return _bookmarkedQuizes.ContainsKey(quizId) && _bookmarkedQuizes[quizId];
    }

    private void ShowQuizTypeSelection(QuizListDto quiz)
    {
        _selectedQuizForType = quiz;
    }

    private async Task ShowQuizDetails(Guid quizId)
    {
        _loadingDetails = true;
        _quizDetails = null;
        _showQuizDetails = true;

        try
        {
            var response = await StudentQuizApi.GetQuizDetailsAsync(quizId);
            if (response.IsSuccess && response.Data != null)
            {
                _quizDetails = response.Data;
            }
            else
            {
                AppState.ShowError(response.ErrorMessage ?? "Failed to load quiz details");
                _showQuizDetails = false;
            }
        }
        catch (Exception ex)
        {
            AppState.ShowError($"Error loading quiz details: {ex.Message}");
            _showQuizDetails = false;
        }
        finally
        {
            _loadingDetails = false;
            StateHasChanged();
        }
    }

    private void OnBottomSheetVisibilityChanged(bool isVisible)
    {
        _showQuizDetails = isVisible;
        StateHasChanged();
    }

    private async Task ShowAllFeedback(Guid quizId)
    {
        _loadingAllFeedback = true;
        _allFeedback = null;
        _showAllFeedback = true;

        try
        {
            var response = await StudentQuizApi.GetAllFeedbackAsync(quizId);
            if (response.IsSuccess && response.Data != null)
            {
                _allFeedback = response.Data;
            }
            else
            {
                AppState.ShowError(response.ErrorMessage ?? "Failed to load feedback");
                _showAllFeedback = false;
            }
        }
        catch (Exception ex)
        {
            AppState.ShowError($"Error loading feedback: {ex.Message}");
            _showAllFeedback = false;
        }
        finally
        {
            _loadingAllFeedback = false;
            StateHasChanged();
        }
    }

    private void OnAllFeedbackBottomSheetVisibilityChanged(bool isVisible)
    {
        _showAllFeedback = isVisible;
        StateHasChanged();
    }

    private async Task StartQuizWithMode(QuestionType type)
    {
        if (_selectedQuizForType == null) return;

        AppState.ShowLoader("Preparing the quiz...");
        try
        {
            QuizApiResponse<int> response = await StudentQuizApi.StartQuizAsync(_selectedQuizForType.Id);
            if (!response.IsSuccess)
            {
                //Show error alert
                return;
            }
            int studentQuizId = response.Data;

            QuizState.StartQuiz(_selectedQuizForType, studentQuizId);

            // Navigate to appropriate quiz type based on selection
            switch (type)
            {
                case QuestionType.MCQ:
                    NavigationManager.NavigateTo("student/quiz");
                    break;
                case QuestionType.Flashcard:
                    NavigationManager.NavigateTo("student/flashcard-quiz");
                    break;
            }
        }
        catch (Exception ex)
        {
            AppState.ShowError(ex.Message);
        }
        finally
        {
            AppState.HideLoader();
            _selectedQuizForType = null;
        }
    }

    private async Task LoadRandomEasyQuizzesAsync()
    {
        AppState.ShowLoader("Loading random easy quizzes...");
        try
        {
            // Get all active quizzes
            var allQuizzes = await StudentQuizApi.GetActiveQuizesAsync(0); // 0 means all categories

            // Filter for easy level quizzes
            var easyQuizzes = allQuizzes.Where(q => q.Level?.ToLower() == "easy").ToArray();

            // Randomize the order
            var random = new Random();
            _randomEasyQuizzes = easyQuizzes.OrderBy(q => random.Next()).Take(20).ToArray(); // Take up to 20 for the slider
        }
        catch (Exception ex)
        {
            AppState.ShowError($"Error loading random easy quizzes: {ex.Message}");
            _randomEasyQuizzes = []; // Initialize as empty array to avoid null reference
        }
        finally
        {
            AppState.HideLoader();
            StateHasChanged();
        }
    }

    private async Task LoadRandomHardQuizzesAsync()
    {
        AppState.ShowLoader("Loading random hard quizzes...");
        try
        {
            // Get all active quizzes
            var allQuizzes = await StudentQuizApi.GetActiveQuizesAsync(0); // 0 means all categories

            // Filter for hard level quizzes
            var hardQuizzes = allQuizzes.Where(q => q.Level?.ToLower() == "hard").ToArray();

            // Randomize the order
            var random = new Random();
            _randomHardQuizzes = hardQuizzes.OrderBy(q => random.Next()).Take(20).ToArray(); // Take up to 20 for the slider
        }
        catch (Exception ex)
        {
            AppState.ShowError($"Error loading random hard quizzes: {ex.Message}");
            _randomHardQuizzes = []; // Initialize as empty array to avoid null reference
        }
        finally
        {
            AppState.HideLoader();
            StateHasChanged();
        }
    }

    private async Task LoadRecentQuizzesAsync()
    {
        AppState.ShowLoader("Loading recent quizzes...");
        try
        {
            // Get all active quizzes
            var allQuizzes = await StudentQuizApi.GetActiveQuizesAsync(0); // 0 means all categories

            // Filter for quizzes created in the last month and order by most recent first
            var oneMonthAgo = DateTime.Now.AddMonths(-1);
            var recentQuizzes = allQuizzes
                .Where(q => q.CreatedAt.HasValue && q.CreatedAt.Value >= oneMonthAgo)
                .OrderByDescending(q => q.CreatedAt) // Order by most recent first
                .Take(12) // Take up to 12 quizzes for the slider (3 rows of 4)
                .ToArray();

            _recentQuizzes = recentQuizzes;
        }
        catch (Exception ex)
        {
            AppState.ShowError($"Error loading recent quizzes: {ex.Message}");
            _recentQuizzes = []; // Initialize as empty array to avoid null reference
        }
        finally
        {
            AppState.HideLoader();
            StateHasChanged();
        }
    }

    private async Task LoadBestRatedQuizzesAsync()
    {
        AppState.ShowLoader("Loading best rated quizzes...");
        try
        {
            // Get all active quizzes
            var allQuizzes = await StudentQuizApi.GetActiveQuizesAsync(0); // 0 means all categories

            // Filter for quizzes with average rating >= 4 and order by rating descending
            var bestRatedQuizzes = allQuizzes
                .Where(q => q.AverageRating.HasValue && q.AverageRating.Value >= 4.0)
                .OrderByDescending(q => q.AverageRating) // Order by highest rating first
                .Take(20) // Take up to 20 for the slider
                .ToArray();

            _bestRatedQuizzes = bestRatedQuizzes;
        }
        catch (Exception ex)
        {
            AppState.ShowError($"Error loading best rated quizzes: {ex.Message}");
            _bestRatedQuizzes = []; // Initialize as empty array to avoid null reference
        }
        finally
        {
            AppState.HideLoader();
            StateHasChanged();
        }
    }

    private void UpdateSearchResults()
    {
        if (string.IsNullOrWhiteSpace(_searchTerm))
        {
            _filteredQuizzes = null; // Show all quizzes when search is empty
        }
        else
        {
            // Filter all loaded quizzes based on the search term
            var searchTermLower = _searchTerm.ToLowerInvariant();
            _filteredQuizzes = _quizes
                .Where(q => q.Name?.ToLowerInvariant().Contains(searchTermLower) == true)
                .ToArray();
        }
        StateHasChanged();
    }

    private void ClearSearch()
    {
        _searchTerm = string.Empty;
        _filteredQuizzes = null;
        StateHasChanged();
    }

    private void HandleSearchKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            // Navigate to the search results page with the search term
            NavigationManager.NavigateTo($"/student/search?searchTerm={Uri.EscapeDataString(_searchTerm)}");
        }
    }

    private void HandleSearchIconClick()
    {
        // Navigate to the search results page with the search term when search icon is clicked
        if (!string.IsNullOrEmpty(_searchTerm))
        {
            NavigationManager.NavigateTo($"/student/search?searchTerm={Uri.EscapeDataString(_searchTerm)}");
        }
    }
