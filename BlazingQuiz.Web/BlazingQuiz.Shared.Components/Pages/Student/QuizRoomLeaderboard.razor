@code {
    [Parameter]
    public Guid QuizId { get; set; }

    [Parameter]
    public Guid RoomId { get; set; }

    private bool isLoading = true;
    private string? errorMessage;
    private string? roomName;
    private string? roomCode;
    private List<QuizRoomLeaderboardEntryDto> leaderboardEntries = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Get room details
            var roomResponse = await RoomApi.GetRoomByIdAsync(RoomId);
            if (roomResponse == null)
            {
                errorMessage = "Kh√¥ng t√¨m th·∫•y ph√≤ng quiz.";
                isLoading = false;
                return;
            }

            roomName = roomResponse.Name;
            roomCode = roomResponse.Code;

            // Get leaderboard data from the new API endpoint that uses StudentQuizzesForRoom
            leaderboardEntries = await RoomApi.GetRoomLeaderboardAsync(RoomId) ?? new List<QuizRoomLeaderboardEntryDto>();
        }
        catch (Exception ex)
        {
            errorMessage = $"L·ªói khi t·∫£i b·∫£ng x·∫øp h·∫°ng: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoToHome()
    {
        NavigationManager.NavigateTo("/student/home");
    }

    private void GoToRoom()
    {
        NavigationManager.NavigateTo($"/student/quiz/{QuizId}/room/{RoomId}");
    }
