@page "/student/quiz-recommendations"
@using BlazingQuiz.Shared
@using BlazingQuiz.Shared.DTOs
@using BlazingQuiz.Shared.Components.Components
@using BlazingQuiz.Web.Apis
@inject IAppState AppState
@inject HttpClient HttpClient
@inject IQuizApi QuizApi
@inject QuizAuthStateProvider QuizAuthStateProvider
@inject NavigationManager NavigationManager

<BackButton />

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h3>Recommended Quizzes for You</h3>
            <p class="text-muted">Based on your quiz performance and preferences</p>
        </div>
    </div>

    @if (_isLoading)
    {
        <Loader />
    }
    else if (_hasError)
    {
        <div class="alert alert-danger">
            <h4>Error</h4>
            <p>Unable to load quiz recommendations. Please try again later.</p>
            <button class="btn btn-primary" @onclick="LoadRecommendations">Retry</button>
        </div>
    }
    else if (_recommendations?.Any() != true)
    {
        <div class="alert alert-info">
            <h4>No Recommendations Available</h4>
            <p>Complete more quizzes to receive personalized recommendations.</p>
            <p>The recommendation system analyzes your quiz performance and preferences to suggest relevant quizzes.</p>
            <button class="btn btn-primary" @onclick="GoToMyQuizzes">Browse All Quizzes</button>
        </div>
    }
    else
    {
        <!-- Analysis Summary Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title">Your Performance Analysis</h5>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <div class="display-4 text-primary">@_analysisStats.HighestRatedCategory</div>
                                    <p class="text-muted">Favorite Category</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <div class="display-4 text-success">@_analysisStats.AverageRating.ToString("F1")</div>
                                    <p class="text-muted">Avg. Predicted Rating</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3">
                                    <div class="display-4 text-info">@_analysisStats.RecommendedCount</div>
                                    <p class="text-muted">Recommended Quizzes</p>
                                </div>
                            </div>
                        </div>
                        <p class="mt-3">These recommendations are based on your recent quiz attempts and preferences. The system analyzes your performance patterns to suggest quizzes that match your skill level and interests.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recommendations Section -->
        <div class="row">
            @foreach (var recommendation in _recommendations)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 recommendation-card">
                        @if (recommendation.QuizDetails?.ImagePath != null)
                        {
                            <img src="@recommendation.QuizDetails.ImagePath" class="card-img-top" alt="@recommendation.QuizDetails.Name" style="height: 150px; object-fit: cover;" />
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@recommendation.QuizDetails?.Name</h5>
                            <p class="card-text flex-grow-1">
                                @if (!string.IsNullOrEmpty(recommendation.QuizDetails?.Description))
                                {
                                    @recommendation.QuizDetails.Description
                                }
                                else
                                {
                                    <span class="text-muted">No description available</span>
                                }
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-star-fill text-warning"></i>
                                        @recommendation.PredictedRating.ToString("F1") Predicted Rating
                                    </small>
                                    <small class="text-muted">
                                        @recommendation.QuizDetails?.TotalQuestions Questions
                                    </small>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="badge bg-info">@recommendation.QuizDetails?.Level</span>
                                    @if (recommendation.QuizDetails?.TimeInMinutes > 0)
                                    {
                                        <small class="text-muted"><i class="bi bi-clock"></i> @recommendation.QuizDetails.TimeInMinutes min</small>
                                    }
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-success w-100" @onclick="() => StartQuiz(recommendation.QuizId)">
                                        <i class="bi bi-play-circle"></i> Start Quiz
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<PythonRecommendation> _recommendations = new();
    private bool _isLoading = true;
    private bool _hasError = false;

    // Analysis statistics
    private AnalysisStats _analysisStats = new AnalysisStats();

    protected override async Task OnInitializedAsync()
    {
        await LoadRecommendations();
    }

    private async Task LoadRecommendations()
    {
        _isLoading = true;
        _hasError = false;

        try
        {
            AppState.ShowLoader("Loading recommendations from AI service...");

            var userId = QuizAuthStateProvider.User?.Id;
            if (userId.HasValue)
            {
                // Call the Python service API to get recommendations
                string apiUrl = string.Format("http://localhost:5000/api/recommendations/{0}?n=10", userId.Value);
                var response = await HttpClient.GetAsync(apiUrl);

                if (response.IsSuccessStatusCode)
                {
                    var content = await response.Content.ReadAsStringAsync();
                    var options = new System.Text.Json.JsonSerializerOptions
                        {
                            PropertyNameCaseInsensitive = true
                        };
                    var pythonResponse = System.Text.Json.JsonSerializer.Deserialize<PythonRecommendationResponse>(content, options);

                    if (pythonResponse?.Recommendations != null)
                    {
                        _recommendations = pythonResponse.Recommendations;

                        // Calculate analysis statistics
                        CalculateAnalysisStats();

                        // Get full quiz details for each recommendation
                        foreach (var rec in _recommendations)
                        {
                            try
                            {
                                // Convert string ID to Guid if possible
                                if (Guid.TryParse(rec.QuizId, out Guid quizGuid))
                                {
                                    var quizResult = await QuizApi.GetQuizByIdAsync(quizGuid.ToString());
                                    if (quizResult.IsSuccessStatusCode && quizResult.Content != null)
                                    {
                                        rec.QuizDetails = quizResult.Content;
                                    }
                                }
                            }
                            catch (Exception ex)
                            {
                                Console.WriteLine($"Error loading quiz details for {rec.QuizId}: {ex.Message}");
                            }
                        }
                    }
                    else
                    {
                        _hasError = true;
                    }
                }
                else
                {
                    _hasError = true;
                }
            }
            else
            {
                _hasError = true;
            }
        }
        catch (Exception ex)
        {
            _hasError = true;
            Console.WriteLine($"Error loading recommendations from Python service: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            AppState.HideLoader();
        }
    }

    private void CalculateAnalysisStats()
    {
        if (_recommendations?.Any() != true)
        {
            _analysisStats = new AnalysisStats();
            return;
        }

        // Calculate average predicted rating
        var avgRating = _recommendations.Average(r => r.PredictedRating);

        // Count of recommendations
        var recommendationCount = _recommendations.Count;

        // Find most common category (would need to get from Python response or fetch separately)
        var highestRatedCategory = "Mixed Topics"; // Placeholder

        _analysisStats = new AnalysisStats
            {
                AverageRating = avgRating,
                RecommendedCount = recommendationCount,
                HighestRatedCategory = highestRatedCategory
            };
    }

    private void StartQuiz(string? quizId)
    {
        if (!string.IsNullOrEmpty(quizId))
        {
            NavigationManager.NavigateTo($"/student/quiz/{quizId}");
        }
    }

    private void GoToMyQuizzes()
    {
        NavigationManager.NavigateTo("/student/my-quizes");
    }

    public class PythonRecommendationResponse
    {
        public int UserId { get; set; }
        public List<PythonRecommendation> Recommendations { get; set; } = new();
        public string Timestamp { get; set; } = string.Empty;
    }

    public class PythonRecommendation
    {
        public string QuizId { get; set; } = string.Empty;
        public double PredictedRating { get; set; }
        public List<SimilarRatedQuiz>? SimilarRatedQuizIds { get; set; }
        public QuizDetailsDto? QuizDetails { get; set; }
    }

    public class SimilarRatedQuiz
    {
        public string QuizId { get; set; } = string.Empty;
        public double Similarity { get; set; }
    }

    public class AnalysisStats
    {
        public double AverageRating { get; set; } = 0.0;
        public int RecommendedCount { get; set; } = 0;
        public string HighestRatedCategory { get; set; } = "Mixed Topics";
    }
}