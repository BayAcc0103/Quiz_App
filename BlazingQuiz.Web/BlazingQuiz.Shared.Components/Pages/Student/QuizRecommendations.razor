@code {
    private List<PythonRecommendation> _recommendations = new();
    private List<PythonRecommendation> _contentBasedRecommendations = new();
    private List<QuizListDto> _allAvailableQuizzes = new();
    private bool _isLoading = true;
    private bool _hasError = false;
    private bool _hasPythonServiceError = false;
    private Dictionary<Guid, bool> _bookmarkedQuizes = new();

    // Analysis statistics
    private AnalysisStats _analysisStats = new AnalysisStats();

    protected override async Task OnInitializedAsync()
    {
        await LoadRecommendations();
    }

    private async Task LoadRecommendations()
    {
        _isLoading = true;
        _hasError = false;

        try
        {
            AppState.ShowLoader("Loading recommendations from AI service...");

            var userId = QuizAuthStateProvider.User?.Id;
            if (userId.HasValue)
            {
                // First, load all available quizzes to have them cached
                var allQuizzesResult = await StudentQuizApi.GetActiveQuizesAsync(0); // 0 means all categories
                _allAvailableQuizzes = allQuizzesResult?.ToList() ?? new List<QuizListDto>();

                // Load collaborative/hybrid recommendations
                await LoadHybridRecommendations(userId.Value);

                // Load content-based recommendations
                await LoadContentBasedRecommendations(userId.Value);
            }
            else
            {
                _hasError = true;
            }
        }
        catch (System.Net.Http.HttpRequestException ex)
        {
            _hasError = true;
            _hasPythonServiceError = true;
            Console.WriteLine($"Python recommendation service not available: {ex.Message}");
        }
        catch (Exception ex)
        {
            _hasError = true;
            Console.WriteLine($"Error loading recommendations from Python service: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            AppState.HideLoader();
        }
    }

    private async Task LoadHybridRecommendations(int userId)
    {
        try
        {
            // Call the Python service API to get hybrid recommendations
            string baseUrl = PythonRecommendationConfigService.GetBaseUrl();
            string apiUrl = $"{baseUrl}/api/recommendations/{userId}?n=10&method=hybrid";
            var response = await HttpClient.GetAsync(apiUrl);

            if (response.IsSuccessStatusCode)
            {
                var content = await response.Content.ReadAsStringAsync();

                // Check if the response is valid JSON before deserializing
                // This handles cases where the Python service returns HTML error pages
                if (!string.IsNullOrEmpty(content) && content.TrimStart().StartsWith("<"))
                {
                    // This is an HTML response (likely an error page), not JSON
                    Console.WriteLine($"Python service returned HTML instead of JSON for hybrid recommendations: {content.Substring(0, Math.Min(200, content.Length))}...");
                }
                else
                {
                    var options = new System.Text.Json.JsonSerializerOptions
                    {
                        PropertyNameCaseInsensitive = true
                    };

                    try
                    {
                        var pythonResponse = System.Text.Json.JsonSerializer.Deserialize<PythonRecommendationResponse>(content, options);

                        if (pythonResponse?.Recommendations != null)
                        {
                            _recommendations = pythonResponse.Recommendations;

                            // Calculate analysis statistics
                            CalculateAnalysisStats();
                        }
                    }
                    catch (System.Text.Json.JsonException ex)
                    {
                        Console.WriteLine($"Error deserializing JSON response from Python service for hybrid recommendations: {ex.Message}");
                        Console.WriteLine($"Response content: {content}");
                    }
                }
            }
            else
            {
                Console.WriteLine($"HTTP error from Python service for hybrid recommendations: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading hybrid recommendations from Python service: {ex.Message}");
        }
    }

    private async Task LoadContentBasedRecommendations(int userId)
    {
        try
        {
            // Call the Python service API to get advanced content-based recommendations using ML vector similarity
            string baseUrl = PythonRecommendationConfigService.GetBaseUrl();
            string apiUrl = $"{baseUrl}/api/recommendations/{userId}?n=10&method=content_based_advanced";
            var response = await HttpClient.GetAsync(apiUrl);

            if (response.IsSuccessStatusCode)
            {
                var content = await response.Content.ReadAsStringAsync();

                // Check if the response is valid JSON before deserializing
                // This handles cases where the Python service returns HTML error pages
                if (!string.IsNullOrEmpty(content) && content.TrimStart().StartsWith("<"))
                {
                    // This is an HTML response (likely an error page), not JSON
                    Console.WriteLine($"Python service returned HTML instead of JSON for content-based recommendations: {content.Substring(0, Math.Min(200, content.Length))}...");
                }
                else
                {
                    var options = new System.Text.Json.JsonSerializerOptions
                    {
                        PropertyNameCaseInsensitive = true
                    };

                    try
                    {
                        var pythonResponse = System.Text.Json.JsonSerializer.Deserialize<PythonRecommendationResponse>(content, options);

                        if (pythonResponse?.Recommendations != null)
                        {
                            _contentBasedRecommendations = pythonResponse.Recommendations;
                        }
                    }
                    catch (System.Text.Json.JsonException ex)
                    {
                        Console.WriteLine($"Error deserializing JSON response from Python service for content-based recommendations: {ex.Message}");
                        Console.WriteLine($"Response content: {content}");
                    }
                }
            }
            else
            {
                Console.WriteLine($"HTTP error from Python service for content-based recommendations: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading content-based recommendations from Python service: {ex.Message}");
        }
    }

    private async Task LoadBookmarkStatusAsync()
    {
        if (!QuizAuthStateProvider.IsLoggedIn)
        {
            return;
        }

        _bookmarkedQuizes.Clear();

        // Collect all unique quiz IDs from both recommendation lists
        var allQuizIds = new HashSet<Guid>();

        foreach (var recommendation in _recommendations.Concat(_contentBasedRecommendations))
        {
            if (Guid.TryParse(recommendation.QuizId, out Guid quizId))
            {
                allQuizIds.Add(quizId);
            }
        }

        // Also include quizzes from _allAvailableQuizzes
        foreach (var quiz in _allAvailableQuizzes)
        {
            allQuizIds.Add(quiz.Id);
        }

        // Load bookmark status for each unique quiz
        foreach (var quizId in allQuizIds)
        {
            var result = await BookmarkApi.IsBookmarkedAsync(QuizAuthStateProvider.User.Id, quizId);
            if (result.IsSuccess)
            {
                _bookmarkedQuizes[quizId] = result.Data;
            }
        }
    }

    private QuizListDto? GetQuizByRecommendationId(string quizId)
    {
        if (Guid.TryParse(quizId, out Guid parsedQuizId))
        {
            return _allAvailableQuizzes.FirstOrDefault(q => q.Id == parsedQuizId);
        }
        return null;
    }

    private void CalculateAnalysisStats()
    {
        if (_recommendations?.Any() != true)
        {
            _analysisStats = new AnalysisStats();
            return;
        }

        // Calculate average predicted rating for main recommendations only
        var avgRating = _recommendations.Average(r => r.PredictedRating);

        // Count of recommendations
        var recommendationCount = _recommendations.Count;

        // Find most common category (would need to get from Python response or fetch separately)
        var highestRatedCategory = "Mixed Topics"; // Placeholder

        _analysisStats = new AnalysisStats
            {
                AverageRating = avgRating,
                RecommendedCount = recommendationCount,
                HighestRatedCategory = highestRatedCategory
            };
    }

