    {
        // Get quiz details to pass to QuizState
        var quizResult = await QuizApi.GetQuizByIdAsync(quizId.ToString());
        if (quizResult.IsSuccessStatusCode && quizResult.Content != null)
        {
            var quizDetails = new QuizListDto
                {
                    Id = quizId,
                    Name = quizResult.Content.Name,
                    Description = quizResult.Content.Description,
                    ImagePath = quizResult.Content.ImagePath,
                    Level = quizResult.Content.Level,
                    TimeInMinutes = quizResult.Content.TimeInMinutes,
                    TotalQuestions = quizResult.Content.TotalQuestions,
                    CategoryId = quizResult.Content.CategoryId,
                    CategoryName = quizResult.Content.CategoryName,
                    CreatedByName = quizResult.Content.CreatedByName,
                    CreatedByAvatarPath = quizResult.Content.CreatedByAvatarPath,
                    AverageRating = quizResult.Content.RecentRatings?.Any() == true ?
                        quizResult.Content.RecentRatings.Average(r => Convert.ToDouble(r.Score)) : null
                };

            // Start the quiz via the API
            var startResult = await StudentQuizApi.StartQuizAsync(quizId);
            if (startResult.IsSuccess)
            {
                int studentQuizId = startResult.Data;
                QuizState.StartQuiz(quizDetails, studentQuizId);
                NavigationManager.NavigateTo("student/quiz");
            }
            else
            {
                NavigationManager.NavigateTo($"/student/quiz/{quizId}");
            }
        }
        else
        {
            NavigationManager.NavigateTo($"/student/quiz/{quizId}");
        }
    }

