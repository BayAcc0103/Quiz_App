                                .OrderByDescending(f => f.CreatedOn)
                                .Take(3)
                                .ToList();
                            }

                            <div class="feedback-list">
                                @foreach (var rating in sortedRatings)
                                {
                                    <div class="feedback-item p-3 mb-2 border rounded">
