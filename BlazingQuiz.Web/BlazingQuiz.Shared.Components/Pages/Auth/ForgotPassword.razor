@page "/auth/forgot-password"
@layout EmptyLayout
@using BlazingQuiz.Web.Apis
@inject NavigationManager NavigationManager
@inject IAuthApi AuthApi
@inject IAppState AppState
@inject QuizAuthStateProvider QuizAuthStateProvider

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="hanging-container">
                <div class="hanging-content">
                    <h3>Forgot Password</h3>
                </div>
                <div class="rope left-rope"></div>
                <div class="rope right-rope"></div>
            </div>
            <div class="card card-3d-raised card-light">
                <div class="card-body">
                    <EditForm Model="_model" OnValidSubmit="SendResetCodeAsync">
                        <DataAnnotationsValidator />
                        <div class="form-container">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input id="email" class="form-control form-control-lg" placeholder="Enter your email" @bind="_model.Email" />
                                <ValidationMessage For="() => _model.Email" class="validation-message" />
                            </div>
                            @if(_errorMessage != null)
                            {
                                <div class="alert alert-danger error-message" role="alert">
                                    @_errorMessage
                                </div>
                            }
                            @if(_successMessage != null)
                            {
                                <div class="alert alert-success error-message" role="alert">
                                    @_successMessage
                                </div>
                            }
                        </div>
                        <div class="d-grid gap-2">
                            @if (!_isBusy)
                            {
                                <button type="submit" class="btn btn-3d btn-3d-success">
                                    <span>Send Reset Code</span>
                                </button>
                                <a href="auth/login" class="btn btn-3d btn-3d-outline">Back to Login</a>
                            }
                            else
                            {
                                <button type="button" disabled class="btn btn-3d btn-3d-secondary">
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Sending...</span>
                                </button>
                            }
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private ForgotPasswordDto _model = new();
    private bool _isBusy;
    private string? _errorMessage;
    private string? _successMessage;

    protected override void OnInitialized()
    {
        if(QuizAuthStateProvider.IsLoggedIn)
        {
            NavigationManager.NavigateTo("/", replace: true);
        }
    }
    
    private async Task SendResetCodeAsync()
    {
        _errorMessage = null;
        _successMessage = null;
        _isBusy = true;
        
        try
        {
            AppState.ShowLoader("Sending reset code...");
            var response = await AuthApi.SendResetCodeAsync(_model);
            
            if (!response.IsSuccess)
            {
                _errorMessage = response.ErrorMessage;
                return;
            }
            
            _successMessage = "Reset code sent successfully. Please check your email.";

            // After a short delay, navigate to the OTP verification page
            await Task.Delay(1000);
            NavigationManager.NavigateTo($"/auth/verify-otp?email={Uri.EscapeDataString(_model.Email)}", replace: false);
            return;
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _isBusy = false;
            AppState.HideLoader();
        }
    }
}